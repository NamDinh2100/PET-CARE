{{#section 'css'}}
<style>
    .login-container {
        min-height: 85vh;
        background-image: url('/static/images/bg.png');
        background-size: cover;
        background-position: center center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.9);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        border-radius: 30px;
    }

    .custom-input-group {
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid transparent;
        border-radius: 50px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.02);
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .custom-input-group:focus-within {
        border-color: #2d5bff;
        box-shadow: 0 0 0 4px rgba(45, 91, 255, 0.15);
        background: #fff;
    }

    .form-control-custom {
        border: none;
        background: transparent;
        padding: 10px 10px;
        font-size: 0.95rem;
        font-weight: 500;
        color: #333;
    }

    .input-icon {
        background: transparent;
        border: none;
        color: #2d5bff;
        padding-left: 15px;
        font-size: 1rem;
        display: flex;
        align-items: center;
    }

    .form-control-custom:focus {
        box-shadow: none;
        background: transparent;
    }

    .form-control-custom::placeholder {
        color: #999;
        font-weight: 400;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #2d5bff 0%, #1a45d6 100%);
        border: none;
        color: white;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(45, 91, 255, 0.3);
        color: white;
    }

    .title-text {
        letter-spacing: 1px;
        color: #333;
    }

    .auth-logo {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #2d5bff 0%, #1a45d6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 32px;
        box-shadow: 0 8px 20px rgba(45, 91, 255, 0.3);
        margin: 0 auto 20px;
    }
</style>
{{/section}}

<div class="login-container px-3">
    <div class="card glass-card p-3 p-md-4" style="max-width: 450px; width: 100%;">
        
        <div class="text-center mb-4">
          
            <h4 class="fw-bold title-text text-uppercase mb-1" style="font-family: 'Abhaya Libre', serif; font-size: 1.8rem; letter-spacing: 2px;">Create Account</h4>
            <p class="text-secondary small mb-0">Join our community today</p>
        </div>

        <form id="frmSignup" method="POST">
            <div class="mb-3 custom-input-group d-flex align-items-center">
                <span class="input-icon"><i class="bi bi-envelope"></i></span>
                <input type="email" class="form-control form-control-custom w-100" id="email" name="email" placeholder="Email Address" required>
            </div>

            <div class="mb-3 custom-input-group d-flex align-items-center">
                <span class="input-icon"><i class="bi bi-person"></i></span>
                <input type="text" class="form-control form-control-custom w-100" id="full_name" name="full_name" placeholder="Full Name" required>
            </div>

            <div class="mb-3 custom-input-group d-flex align-items-center">
                <span class="input-icon"><i class="bi bi-telephone"></i></span>
                <input type="tel" class="form-control form-control-custom w-100" id="phone" name="phone" placeholder="Phone Number" required>
            </div>

            <div class="mb-3 custom-input-group d-flex align-items-center">
                <span class="input-icon"><i class="bi bi-lock"></i></span>
                <input type="password" class="form-control form-control-custom w-100" id="password" name="password" placeholder="Password" required>
            </div>

            <div class="mb-4 custom-input-group d-flex align-items-center">
                <span class="input-icon"><i class="bi bi-shield-check"></i></span>
                <input type="password" class="form-control form-control-custom w-100" id="confirmpassword" name="confirmPassword" placeholder="Confirm Password" required>
            </div>
            
            <button type="submit" class="btn btn-gradient rounded-pill w-100 py-3 fw-bold shadow-sm mb-3 fs-6 text-uppercase">
                Sign Up
            </button>

            <div class="text-center border-top pt-3 border-secondary-subtle">
                <span class="text-secondary small">Already have an account?</span>
                <a href="/signin" class="text-primary text-decoration-none fw-bold small ms-1">Sign In</a>
            </div>
        </form>
    </div>
</div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById('frmSignup').addEventListener('submit', function(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        const password = formData.get('password');
        const confirmPassword = formData.get('confirmPassword');
        
        if (password !== confirmPassword) {
            Swal.fire({
                title: 'Error!',
                text: 'Passwords do not match.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
        
        Swal.fire({
            title: 'Success!',
            text: 'Account created successfully.',
            icon: 'success',
            confirmButtonText: 'OK'
        }).then(() => {
            e.target.submit();
        });
    });
</script>
{{/section}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Đợi trang web tải xong hoàn toàn mới thực thi code
    document.addEventListener('DOMContentLoaded', function () {
        const registrationForm = document.querySelector('#frmSignup');

        if (registrationForm) {
            registrationForm.addEventListener('submit', function (e) {
                // 1. Ngăn chặn form gửi đi ngay lập tức
                e.preventDefault();

                // 2. Lấy dữ liệu và loại bỏ khoảng trắng
                const email = document.querySelector('#email').value.trim();
                const fullName = document.querySelector('#full_name').value.trim();
                const phone = document.querySelector('#phone').value.trim();
                const password = document.querySelector('#password').value;
                const confirmPassword = document.querySelector('#confirmpassword').value;

                // --- BƯỚC 3: KIỂM TRA RỖNG ---
                if (!email || !fullName || !phone || !password || !confirmPassword) {
                    Swal.fire({
                        title: 'Thông báo',
                        text: 'Vui lòng điền đầy đủ tất cả các trường thông tin!',
                        icon: 'warning',
                        confirmButtonColor: '#2d5bff'
                    });
                    return; // Dừng lại tại đây
                }

                // --- BƯỚC 4: KIỂM TRA ĐỊNH DẠNG ---
                
                // Validate Email
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                    Swal.fire({ title: 'Lỗi Email', text: 'Email không đúng định dạng (VD: abc@gmail.com)', icon: 'error' });
                    return;
                }

                // Validate Full Name
                if (fullName.length < 2) {
                    Swal.fire({ title: 'Lỗi Họ Tên', text: 'Họ tên phải có ít nhất 2 ký tự', icon: 'error' });
                    return;
                }

                // Validate Phone
                const phoneRegex = /^[0-9]{10,11}$/;
                if (!phoneRegex.test(phone.replace(/\s/g, ''))) {
                    Swal.fire({ title: 'Lỗi SĐT', text: 'Số điện thoại phải có 10-11 chữ số', icon: 'error' });
                    return;
                }

                // Validate Password
                if (password.length < 6) {
                    Swal.fire({ title: 'Lỗi Mật khẩu', text: 'Mật khẩu phải từ 6 ký tự trở lên', icon: 'error' });
                    return;
                }

                // Validate Confirm Password
                if (password !== confirmPassword) {
                    Swal.fire({ title: 'Lỗi xác nhận', text: 'Mật khẩu nhập lại không khớp!', icon: 'error' });
                    return;
                }

                // --- BƯỚC 5: GỬI FORM NẾU TẤT CẢ HỢP LỆ ---
                Swal.fire({
                    title: 'Thành công!',
                    text: 'Dữ liệu hợp lệ, đang tiến hành đăng ký...',
                    icon: 'success',
                    timer: 1500,
                    showConfirmButton: false
                }).then(() => {
                    // Sau khi hiện thông báo thành công thì mới thực sự submit lên server
                    registrationForm.submit();
                });
            });
        } else {
            console.error("Không tìm thấy form với ID 'frmSignup'. Hãy kiểm tra lại HTML.");
        }
    });
</script>
{{/section}}
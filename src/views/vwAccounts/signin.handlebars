{{#section 'css'}}
    <style>
        .login-background {
            background-image: url('/static/images/bg.png'); 
            /* 1. cover: Luôn phủ kín container, giữ tỷ lệ ảnh, chấp nhận cắt bớt cạnh */
            background-size: cover;
            /* 2. no-repeat: Không lặp lại ảnh */
            background-repeat: no-repeat;
            /* 3. Mặc định trên PC: Căn giữa trung tâm */
            background-position: center center;
            
            position: relative;
            /* Đảm bảo vùng chứa này luôn chiếm toàn bộ chiều cao còn lại */
            flex-grow: 1; 
             /* Thêm min-height để chắc chắn trên màn hình ngắn nó vẫn đủ cao */
            min-height: 500px; 
        }

        /* Lớp phủ mờ (giữ nguyên) */
        .login-background::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(255, 255, 255, 0.1); /* Giảm độ tối đi một chút vì ảnh nền sáng */
            z-index: 0;
        }
        /* Card login (giữ nguyên) */
        .login-card {
            position: relative;
            z-index: 1;
            background-color: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.5);
        }
    </style>
{{/section}}

<div class="flex-grow-1 d-flex justify-content-center align-items-center login-background">

    <div class="card p-4 rounded-4 shadow-lg login-card" style="max-width: 450px; width: 100%;">

        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Welcome Back</h2>
            <p class="text-secondary small">Please enter your details to sign in.</p>
        </div>

        <form method="POST" action="/signin">
            <div class="mb-3">
                <label class="form-label fw-bold small text-secondary">Email</label>
                <input type="email" class="form-control border-dark-subtle rounded-3 py-2" name="email"
                    placeholder="name@example.com" required>
            </div>
            <div class="mb-3">
                <label class="form-label fw-bold small text-secondary">Password</label>
                <input type="password" class="form-control border-dark-subtle rounded-3 py-2" name="password"
                    placeholder="••••••••" required>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label small text-secondary" for="rememberMe">Remember me</label>
                </div>
                <a href="#" class="text-primary text-decoration-none small fw-bold">Forgot password?</a>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-sm w-100"
                    style="background-color: var(--primary-blue); border: none;">
                    SIGN IN
                </button>
            </div>
            <div class="mt-4 text-center">
                <span class="text-secondary small">Don't have an account?</span>
                <a href="/vwAccounts/signup" class="text-primary text-decoration-none fw-bold small ms-1">Create an
                    account</a>
            </div>
        </form>

    </div>
</div>
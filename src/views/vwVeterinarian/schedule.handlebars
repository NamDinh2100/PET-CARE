{{#section 'js'}}
<script>
    const appointments = {{{json schedule}}};
    let currentDate = new Date();

    // Convert appointments to a map of dates for quick lookup
    const appointmentDates = new Map();
    appointments.forEach(apt => {
        const date = new Date(apt.date_start);
        const dateKey = date.toISOString().split('T')[0]; // YYYY-MM-DD format
        if (!appointmentDates.has(dateKey)) {
            appointmentDates.set(dateKey, []);
        }
        appointmentDates.get(dateKey).push(apt);
    });

    // Helper function to format time
    function formatTime(timeString) {
        if (!timeString) return 'N/A';
        if (timeString.length >= 5) {
            return timeString.substring(0, 5);
        }
        return timeString;
    }

    // Helper function to format date
    function formatDate(dateString) {
        if (!dateString) return 'N/A';
        const date = new Date(dateString);
        return date.toLocaleDateString('en-US', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });
    }

    // Helper function to get status class
    function getStatusClass(status) {
        const statusMap = {
            'confirmed': 'status-confirmed',
            'completed': 'status-completed',
            'cancelled': 'status-cancelled',
            'scheduled': 'status-scheduled'
        };
        return statusMap[status];
    }

    // Helper function to get status display text
    function getStatusText(status) {
        const statusMap = {
            'confirmed': 'Confirmed',
            'completed': 'Completed',
            'cancelled': 'Cancelled',
            'scheduled': 'Scheduled'
        };
        return statusMap[status] || status;
    }

    function renderCalendar() {
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        
        // Update header
        const monthNames = ['January', 'February', 'March', 'April', 'May', 'June',
                            'July', 'August', 'September', 'October', 'November', 'December'];
        document.getElementById('monthYear').textContent = `${monthNames[month]} ${year}`;

        // Get first day of month and number of days
        const firstDay = new Date(year, month, 1).getDay();
        const daysInMonth = new Date(year, month + 1, 0).getDate();
        
        // Adjust for Monday start (0 = Sunday, convert to 1 = Monday)
        const startDay = firstDay === 0 ? 6 : firstDay - 1;

        // Calculate required number of rows
        const totalCells = startDay + daysInMonth;
        const requiredRows = Math.ceil(totalCells / 7);

        const grid = document.getElementById('calendarGrid');
        grid.innerHTML = '';
        
        // Update grid rows dynamically
        grid.style.gridTemplateRows = `repeat(${requiredRows}, minmax(60px, 1fr))`;

        let totalDaysRendered = 0;
        
        // Add empty cells for days before month starts
        for (let i = 0; i < startDay; i++) {
            const emptyCell = document.createElement('div');
            emptyCell.className = 'calendar-day-custom empty';
            grid.appendChild(emptyCell);
            totalDaysRendered++;
        }

        // Add day cells
        let appointmentCount = 0;
        for (let day = 1; day <= daysInMonth; day++) {
            const dayCell = document.createElement('div');
            dayCell.className = 'calendar-day-custom';
            dayCell.textContent = day;

            // Check if this day has appointments
            const dateKey = `${year}-${String(month + 1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
            if (appointmentDates.has(dateKey)) {
                dayCell.classList.add('has-appointment');
                const dayAppointments = appointmentDates.get(dateKey);
                appointmentCount += dayAppointments.length;
                
                // Check if all appointments in this day are completed
                const allCompleted = dayAppointments.every(apt => apt.status === 'completed');
                if (allCompleted) {
                    dayCell.classList.add('completed');
                }
                
                // Add tooltip with appointment info
                dayCell.title = `${dayAppointments.length} appointments`;
                dayCell.onclick = () => showDayDetails(dateKey, dayAppointments);
            }

            grid.appendChild(dayCell);
            totalDaysRendered++;
        }

        // Add empty cells only to complete the last row
        const totalRequiredCells = requiredRows * 7;
        const remainingCells = totalRequiredCells - totalDaysRendered;
        for (let i = 0; i < remainingCells; i++) {
            const emptyCell = document.createElement('div');
            emptyCell.className = 'calendar-day-custom empty';
            grid.appendChild(emptyCell);
        }
        
        // Update total appointments count
        document.getElementById('totalAppointments').textContent = `Total: ${appointmentCount} appointments`;
    }

    function previousMonth() {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    }

    function nextMonth() {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    }

    function showDayDetails(dateKey, dayAppointments) {
        // Sort appointments by time
        dayAppointments.sort((a, b) => {
            const timeA = a.time || '00:00';
            const timeB = b.time || '00:00';
            return timeA.localeCompare(timeB);
        });

        const appointmentsHtml = dayAppointments.map((apt, index) => {
            // Parse services if available
            let servicesText = 'N/A';
            if (apt.services) {
                try {
                    const servicesArray = Array.isArray(apt.services) ? apt.services : JSON.parse(apt.services);
                    if (servicesArray.length > 0) {
                        servicesText = servicesArray.map(s => s.service_name || s).join(', ');
                    }
                } catch (e) {
                    servicesText = apt.services;
                }
            }

            return `
                <div class="appointment-card">
                    <div class="appointment-header">
                        <span class="time">
                            <i class="fa-regular fa-clock me-1"></i>
                            ${formatTime(apt.time) || 'Not specified'}
                        </span>
                        <span class="status-badge ${getStatusClass(apt.status)}">
                            ${getStatusText(apt.status)}
                        </span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label"><i class="fa-regular fa-user me-1"></i> Customer:</span>
                        <span class="info-value">${apt.customer_name || apt.full_name || 'N/A'}</span>
                    </div>
                    
                    <div class="info-row">
                        <span class="info-label"><i class="fa-solid fa-stethoscope me-1"></i> Services:</span>
                        <span class="info-value">${servicesText}</span>
                    </div>
                    
                    ${apt.note ? `
                    <div class="info-row">
                        <span class="info-label"><i class="fa-regular fa-note-sticky me-1"></i> Note:</span>
                        <span class="info-value">${apt.note}</span>
                    </div>
                    ` : ''}
                    
                    <div class="text-end mt-3">
                        <a href="/vet/appointment?q=${apt.appointment_id}&field=id" class="btn-view-detail">
                            <i class="fa-solid fa-eye me-1"></i> View Details
                        </a>
                    </div>
                </div>
            `;
        }).join('');
        
        const formattedDate = formatDate(dateKey);
        
        Swal.fire({
            title: `<div class="popup-title">Appointments</div>`,
            html: `
                <div style="margin-bottom: 15px; color: #64748b; font-size: 0.95rem;">
                    <strong>${formattedDate}</strong> - ${dayAppointments.length} appointment(s)
                </div>
                <div style="max-height: 450px; overflow-y: auto; padding: 5px;">
                    ${appointmentsHtml}
                </div>
            `,
            showCloseButton: true,
            showConfirmButton: true,
            width: '650px',
            customClass: {
                popup: 'rounded-4'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/vet/appointment';
            }
        });
    }

    // Initial render
    renderCalendar();
</script>

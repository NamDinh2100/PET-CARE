{{#section 'css'}}
    <style>
        .modal-content {
            border: 3px solid #a58f8f;
            border-radius: 25px;
        }
        .modal-header {
            background-color: #d9d9d9;
            border-bottom: 3px solid #a58f8f;
            border-radius: 22px 22px 0 0;
        }

        .modal-backdrop.show {
            backdrop-filter: blur(5px);
            opacity: 0.5;
        }
        
        /* Tùy chỉnh màu pagination */
        .table-container {
            min-height: 450px;
        }
        .pagination .page-link {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            padding: 0;
            border: 2px solid #2d5bff;
            color: #2d5bff;
            font-weight: bold;
        }
        .pagination .page-item.active .page-link {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
        .pagination .page-link:hover {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
    </style>
{{/section}}

{{!-- 1. DANH SÁCH DỊCH VỤ (UNIFIED CONTAINER) --}}

<div class="row mb-4">
    <div class="col-md-8 mx-auto">
        <div class="input-group">
            <input type="text" class="form-control border-dark search-input-rounded ps-4 bg-white"
                placeholder="SEARCH DATA..." aria-label="Search">
            <span class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary">
                <i class="bi bi-search"></i>
            </span>
        </div>
    </div>
</div>


<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 brand-font fw-bold text-uppercase">Appointment</h4>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th> 
                        <th scope="col" class="py-3">Customer</th>
                        <th scope="col" class="py-3">Veterinarian</th>
                        <th scope="col" class="py-3">Time</th>
                        <th scope="col" class="py-3">Date Start</th>
                        <th scope="col" class="py-3">Status</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each appointments}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{appointment_id}}</td>
                        <td class="fw-semibold">{{customer_name}}</td>
                        <td class="fw-semibold">{{veterinarian_name}}</td>
                        <td>{{time}}</td>
                        <td class="text-muted small">{{formatDate date_start}}</td>
                        <td class="text-muted small">{{status}}</td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-outline-primary" href="/admin/appointments/edit?id={{appointment_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="?page={{value}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>

{{!-- 2. MODAL POPUP (Bootstrap Standard) --}}
{{#if isAddMode}}
<div class="modal fade" id="addAppointmentModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            
            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase">New Appointment</h4>
                <a href="/admin/appointments" class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST">
                    <div class="mb-4">
                        <input type="text" name="customer" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="CUSTOMER" required style="border-color: #ccc;">
                    </div>

                    <div class="mb-4">
                        <input type="text" name="veterinarian" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="VETERINARIAN" required style="border-color: #ccc;">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <input type="datetime-local" name="date_start" class="form-control form-control-lg rounded-pill border-2 fs-6" required style="border-color: #ccc;">
                        </div>
                        <div class="col-md-6 mb-4">
                            <input type="datetime-local" name="date_end" class="form-control form-control-lg rounded-pill border-2 fs-6" required style="border-color: #ccc;">
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#section 'js'}}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tự động bật Modal nếu đang ở chế độ Add
            var addModalElement = document.getElementById('addAppointmentModal');
            if (addModalElement) {
                var myModal = new bootstrap.Modal(addModalElement);
                myModal.show();
            }
        });
    </script>
{{/section}}
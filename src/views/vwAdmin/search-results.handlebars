{{#section 'css'}}
<style>
    .role-badge {
        min-width: 100px;
        padding: 8px 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .role-admin {
        background-color: #ffe5e5;
        color: #d63384;
        border: 1px solid #d63384;
    }

    .role-veterinarian {
        background-color: #e8f5e9;
        color: #198754;
        border: 1px solid #198754;
    }

    .role-staff {
        background-color: #e7f1ff;
        color: #0d6efd;
        border: 1px solid #0d6efd;
    }
</style>
{{/section}}

{{!-- Search Header --}}
<div class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0 brand-font fw-bold text-uppercase">
                    <i class="bi bi-search me-2"></i>Search Results
                </h4>
                <small class="text-muted">
                    Found {{totalResults}} result(s) for "{{query}}"
                </small>
            </div>
            <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left me-2"></i>Go Back
            </a>
        </div>
    </div>
</div>

{{!-- Employees Section --}}
{{#if results.employees.length}}
<div class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="mb-0 brand-font fw-bold text-uppercase">
                    <i class="bi bi-people me-2"></i>Employees
                </h5>
                <small class="text-muted">{{results.employees.length}} result(s) found</small>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Email</th>
                        <th scope="col" class="py-3">Phone</th>
                        <th scope="col" class="py-3">Role</th>
                        <th scope="col" class="py-3 rounded-end-3 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each results.employees}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{this.user_id}}</td>
                        <td class="fw-semibold">{{this.full_name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td>
                            <span class="badge rounded-pill role-badge role-{{this.role}} text-uppercase">
                                {{this.role}}
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="/admin/employees/edit?id={{this.user_id}}" class="btn btn-sm btn-outline-primary rounded-pill">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/if}}

{{!-- Customers Section --}}
{{#if results.customers.length}}
<div class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="mb-0 brand-font fw-bold text-uppercase">
                    <i class="bi bi-person me-2"></i>Customers
                </h5>
                <small class="text-muted">{{results.customers.length}} result(s) found</small>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Email</th>
                        <th scope="col" class="py-3">Phone</th>
                        <th scope="col" class="py-3 rounded-end-3">Address</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each results.customers}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{this.user_id}}</td>
                        <td class="fw-semibold">{{this.full_name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td class="text-muted small">{{this.address}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/if}}

{{!-- Services Section --}}
{{#if results.services.length}}
<div class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="mb-0 brand-font fw-bold text-uppercase">
                    <i class="bi bi-tools me-2"></i>Services
                </h5>
                <small class="text-muted">{{results.services.length}} result(s) found</small>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">Service Name</th>
                        <th scope="col" class="py-3">Description</th>
                        <th scope="col" class="py-3 rounded-end-3 text-end">Price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each results.services}}
                    <tr>
                        <td class="ps-3 fw-semibold">{{this.service_name}}</td>
                        <td class="text-muted small">{{this.description}}</td>
                        <td class="text-end fw-bold text-primary">{{this.base_price}} VND</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/if}}

{{!-- Medicines Section --}}
{{#if results.medicines.length}}
<div class="card shadow-sm border-0 rounded-4 mb-4">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h5 class="mb-0 brand-font fw-bold text-uppercase">
                    <i class="bi bi-capsule me-2"></i>Medicines
                </h5>
                <small class="text-muted">{{results.medicines.length}} result(s) found</small>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">Medicine Name</th>
                        <th scope="col" class="py-3">Form</th>
                        <th scope="col" class="py-3">Category</th>
                        <th scope="col" class="py-3 rounded-end-3 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each results.medicines}}
                    <tr>
                        <td class="ps-3 fw-semibold">{{this.medicine_name}}</td>
                        <td>{{this.form}}</td>
                        <td>
                            <span class="badge bg-secondary">{{this.category}}</span>
                        </td>
                        <td class="text-center">
                            <a href="/admin/medicines/edit?id={{this.medicine_id}}" class="btn btn-sm btn-outline-primary rounded-pill">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{/if}}

{{!-- No Results --}}
{{#unless totalResults}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-5 text-center">
        <i class="bi bi-search display-1 text-secondary"></i>
        <p class="text-secondary mt-3 mb-1">No results found for "{{query}}"</p>
        <p class="text-muted small">Try different keywords or check your spelling</p>
    </div>
</div>
{{/unless}}
{{#section 'css'}}
    <style>
        .modal-content {
            border: 3px solid #a58f8f;
            border-radius: 25px;
        }
        .modal-header {
            background-color: #d9d9d9;
            border-bottom: 3px solid #a58f8f;
            border-radius: 22px 22px 0 0;
        }

        .modal-backdrop.show {
            backdrop-filter: blur(5px);
            opacity: 0.5;
        }
        
        /* Tùy chỉnh màu pagination cho hợp tông đen trắng nếu cần */
        .page-link { color: #333; }
        .page-item.active .page-link { background-color: #2d5bff; border-color: #2d5bff; }
    </style>
{{/section}}

{{!-- 1. DANH SÁCH DỊCH VỤ (UNIFIED CONTAINER) --}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 brand-font fw-bold text-uppercase">Service List</h4>
            
            <a class="btn btn-outline-success" href="/admin/services/add">
                <i class="bi bi-plus-lg me-1"></i> New
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th> <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Base Price</th>
                        <th scope="col" class="py-3">Description</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th> </tr>
                </thead>
                <tbody>
                    {{#each services}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{service_id}}</td>
                        <td class="fw-semibold">{{service_name}}</td>
                        <td class="text-success fw-bold">{{base_price}}</td>
                        <td class="text-muted small">{{description}}</td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-outline-primary" href="/admin/services/edit?id={{service_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    <li class="page-item active"><a class="page-link rounded-circle mx-1 shadow-sm" href="#">1</a></li>
                    <li class="page-item"><a class="page-link rounded-circle mx-1 text-dark border-0 bg-light" href="#">2</a></li>
                    <li class="page-item"><a class="page-link rounded-circle mx-1 text-dark border-0 bg-light" href="#">3</a></li>
                </ul>
            </nav>
        </div>

    </div>
</div>

{{!-- 2. MODAL POPUP (Giữ nguyên logic cũ) --}}
{{#if isAddMode}}
<div class="modal fade" id="addServiceModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase">New Service</h4>
                <a href="/admin/services" class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>
            <div class="modal-body p-5">
                <form method="POST">
                    <div class="mb-4">
                        <input type="email" name="name" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="EMAIL" required style="border-color: #ccc;">
                    </div>
                    <div class="mb-4">
                        <input type="text" name="price" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="NAME" required style="border-color: #ccc;">
                    </div>
                    <div class="mb-4">
                        <input type="text" name="description" class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="PHONE" required style="border-color: #ccc;">
                    </div>
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#section 'js'}}
    <script src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var addModalElement = document.getElementById('addServiceModal');
            if (addModalElement) {
                var myModal = new bootstrap.Modal(addModalElement);
                myModal.show();
            }
        });
    </script>
{{/section}}
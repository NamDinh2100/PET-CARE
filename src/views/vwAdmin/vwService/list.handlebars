{{#section 'css'}}
<style>
    /* --- Modal Styling --- */
    .modal-content {
        border: 3px solid #3100f6;
        border-radius: 25px;
    }
    
    .modal-header {
        background-color: #0900b8; /* Màu nền xám header */
        border-bottom: 2px solid #a58f8f;
        border-radius: 20px 20px 0 0;
        padding-top: 15px;
        padding-bottom: 15px;
    }
    
    /* Pagination Styling */
    .table-container {
        min-height: 450px;
    }
    
    .pagination .page-link {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        padding: 0;
        border: 2px solid #2d5bff;
        color: #2d5bff;
        margin: 0 3px;
        font-weight: 600;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }
    
    .pagination .page-link:hover {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }

    /* Modal backdrop blur effect */
    .modal-backdrop.show {
        backdrop-filter: blur(5px);
        opacity: 0.5;
    }

    /* Advanced Search Styling */
    .search-form .form-select {
        border-right: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .search-form .form-control {
        border-left: none;
        border-radius: 0 25px 25px 0 !important;
    }

    .search-form .input-group-prepend .form-select {
        border-radius: 25px 0 0 25px !important;
    }

    .search-input-rounded {
        border-radius: 0 25px 25px 0;
    }
</style>
{{/section}}

{{!-- Advanced Search Section --}}
<div class="row mb-4">
    <div class="col-md-10 mx-auto">
        <form action="/admin/services" method="GET" class="search-form">
            <div class="input-group">
                <div class="input-group-prepend">
                    <select name="field" class="form-select border-dark" style="min-width: 180px; max-width: 180px; border-top-right-radius: 0; border-bottom-right-radius: 0;">
                        <option value="" {{#unless searchField}}selected{{/unless}}>Select Field</option>
                        <option value="id" {{#if (eq searchField 'id')}}selected{{/if}}>ID</option>
                        <option value="name" {{#if (eq searchField 'name')}}selected{{/if}}>Name</option>
                        <option value="price" {{#if (eq searchField 'price')}}selected{{/if}}>Price</option>
                    </select>
                </div>
                <input type="text" name="q" class="form-control border-dark search-input-rounded ps-4 bg-white"
                    placeholder="SEARCH SERVICES..." aria-label="Search" value="{{searchQuery}}">
                <button type="submit" class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary btn btn-link p-0">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            {{#if isSearchMode}}
            <div class="mt-2">
                <span class="badge bg-info me-2">
                    <i class="bi bi-search me-1"></i>
                    Search: "{{searchQuery}}" in 
                    {{#if (eq searchField 'id')}}ID{{/if}}
                    {{#if (eq searchField 'name')}}Name{{/if}}
                    {{#if (eq searchField 'price')}}Price{{/if}}
                </span>
                <a href="/admin/services" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x me-1"></i>Clear Search
                </a>
            </div>
            {{/if}}
        </form>
    </div>
</div>

{{!-- Service List Content --}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-0 brand-font fw-bold text-uppercase">Services</h4>
                {{#if isSearchMode}}
                <small class="text-muted">
                    {{services.length}} result(s) found for "{{searchQuery}}"
                    {{#if searchField}}
                        in {{#if (eq searchField 'id')}}ID{{/if}}{{#if (eq searchField 'name')}}Name{{/if}}{{#if (eq searchField 'price')}}Price{{/if}}
                    {{/if}}
                </small>
                {{/if}}
            </div>

            <a class="btn btn-outline-success" href="/admin/services/add">
                <i class="bi bi-plus-lg me-1"></i> New
            </a>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Service Name</th>
                        <th scope="col" class="py-3">Base Price</th>
                        <th scope="col" class="py-3">Description</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if services.length}}
                    {{#each services}}
                    <tr>
                        <td class="ps-3"><strong>#{{service_id}}</strong></td>
                        <td class="fw-semibold">{{service_name}}</td>
                        <td class="text-success fw-semibold">{{base_price}} đ</td>
                        <td class="text-muted small" style="max-width: 250px;">{{#if description}}{{description}}{{else}}-{{/if}}</td>
                        <td class="text-end pe-3">
                            <a class="btn btn-outline-primary btn-sm" href="/admin/services/edit?id={{service_id}}">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-3">No services found.</p>
                        </td>
                    </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>

        {{#if services.length}}
        <!-- Pagination Controls -->
        <div class="mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="{{{href}}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>
        {{/if}}

    </div>
</div>

{{!-- Add Service Modal --}}
{{#if isAddMode}}
<div class="modal fade" id="addServiceModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            
            <div class="modal-header justify-content-center position-relative">
                <h5 class="modal-title fw-bold text-uppercase text-white">NEW SERVICE</h5>
                <a href="/admin/services"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-5 text-decoration-none" style="cursor: pointer;">
                    <i class="bi bi-x-circle"></i>
                </a>
            </div>

            <div class="modal-body p-4">
                <form method="POST" id="frmService">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Service Name</label>
                        <input type="text" name="service_name" class="form-control" placeholder="Enter service name" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Base Price (đ)</label>
                        <input type="number" step="0.01" name="base_price" class="form-control" placeholder="Enter price" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description (Optional)</label>
                        <textarea name="description" class="form-control" placeholder="Enter description" rows="3" style="resize: none;"></textarea>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary fw-bold px-5">
                            SUBMIT
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.querySelector('#frmService').addEventListener('submit', function (e) {
    e.preventDefault();

    Swal.fire({
        title: 'Success',
        text: 'Added service successfully.',
        icon: 'success'
    }).then(() => {
        e.target.submit();
    });
  })

    document.addEventListener('DOMContentLoaded', function () {
        // Tự động bật Modal Service
        var addModalElement = document.getElementById('addServiceModal');
        if (addModalElement) {
            var myModal = new bootstrap.Modal(addModalElement);
            myModal.show();
        }
        
        // Handle search form submission validation
        const searchForm = document.querySelector('.search-form');
        if (searchForm) {
            searchForm.addEventListener('submit', function(e) {
                const searchField = document.querySelector('select[name="field"]').value;
                const searchQuery = document.querySelector('input[name="q"]').value.trim();
                
                // Check if field is not selected
                if (!searchField || searchField === '') {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Field Required',
                        text: 'Please select a field before searching.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2d5bff'
                    });
                    return false;
                }
                
                // Check if search query is empty
                if (searchQuery === '') {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Empty Search',
                        text: 'Please enter a search term.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2d5bff'
                    });
                    return false;
                }
            });
        }
        
        // Show success notifications
        const urlParams = new URLSearchParams(window.location.search);
        const success = urlParams.get('success');
        
        if (success === 'add') {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Service added successfully.',
                timer: 3000,
                showConfirmButton: false,
                customClass: {
                    popup: 'swal2-popup'
                }
            });
            // Clean URL
            window.history.replaceState({}, '', '/admin/services');
        } else if (success === 'edit') {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Service updated successfully.',
                timer: 3000,
                showConfirmButton: false,
                customClass: {
                    popup: 'swal2-popup'
                }
            });
            // Clean URL
            window.history.replaceState({}, '', '/admin/services');
        }
    });
</script>
{{/section}}
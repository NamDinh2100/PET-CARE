{{!-- 1. DANH SÁCH KHÁCH HÀNG --}}
{{#section 'css'}}
<style>
    /* --- GIỮ LẠI STYLE RIÊNG CHO MODAL --- */
    .modal-content {
        border: 3px solid #a58f8f;
        border-radius: 25px;
    }
    .modal-header {
        background-color: #d9d9d9;
        border-bottom: 3px solid #a58f8f;
        border-radius: 22px 22px 0 0;
    }
    
    /* Tùy chỉnh màu pagination */
    .table-container {
        min-height: 450px;
    }
    .pagination .page-link {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        padding: 0;
        border: 2px solid #2d5bff;
        color: #2d5bff;
        font-weight: bold;
    }
    .pagination .page-item.active .page-link {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }
    .pagination .page-link:hover {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }

    /* Hiệu ứng làm mờ nền khi Modal hiện lên */
    .modal-backdrop.show {
        backdrop-filter: blur(5px);
        opacity: 0.5;
    }

    /* Tùy chỉnh màu pagination */
    .page-link {
        color: #333;
    }

    .page-item.active .page-link {
        background-color: #2d5bff;
        border-color: #2d5bff;
    }

    /* Advanced Search Styling */
    .search-form .form-select {
        border-right: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .search-form .form-control {
        border-left: none;
        border-radius: 0 25px 25px 0 !important;
    }

    .search-form .input-group-prepend .form-select {
        border-radius: 25px 0 0 25px !important;
    }

    .search-input-rounded {
        border-radius: 0 25px 25px 0;
    }
</style>
{{/section}}

{{!-- Advanced Search Section --}}
<div class="row mb-4">
    <div class="col-md-10 mx-auto">
        <form action="/admin/customers" method="GET" class="search-form">
            <div class="input-group">
                <div class="input-group-prepend">
                    <select name="field" class="form-select border-dark" style="max-width: 150px; border-top-right-radius: 0; border-bottom-right-radius: 0;">
                        <option value="all" {{#if (eq searchField 'all')}}selected{{/if}}>All Fields</option>
                        <option value="id" {{#if (eq searchField 'id')}}selected{{/if}}>ID</option>
                        <option value="name" {{#if (eq searchField 'name')}}selected{{/if}}>Name</option>
                        <option value="email" {{#if (eq searchField 'email')}}selected{{/if}}>Email</option>
                        <option value="phone" {{#if (eq searchField 'phone')}}selected{{/if}}>Phone</option>
                    </select>
                </div>
                <input type="text" name="q" class="form-control border-dark search-input-rounded ps-4 bg-white"
                    placeholder="SEARCH CUSTOMERS..." aria-label="Search" value="{{searchQuery}}">
                <button type="submit" class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary btn btn-link p-0">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            {{#if isSearchMode}}
            <div class="mt-2">
                <span class="badge bg-info me-2">
                    <i class="bi bi-search me-1"></i>
                    Search: "{{searchQuery}}" in 
                    {{#if (eq searchField 'all')}}All Fields{{/if}}
                    {{#if (eq searchField 'id')}}ID{{/if}}
                    {{#if (eq searchField 'name')}}Name{{/if}}
                    {{#if (eq searchField 'email')}}Email{{/if}}
                    {{#if (eq searchField 'phone')}}Phone{{/if}}
                </span>
                <a href="/admin/customers" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x me-1"></i>Clear Search
                </a>
            </div>
            {{/if}}
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-0 brand-font fw-bold text-uppercase">Customer</h4>
                {{#if isSearchMode}}
                <small class="text-muted">
                    {{customers.length}} result(s) found for "{{searchQuery}}"
                    {{#unless (eq searchField 'all')}}
                        in {{#if (eq searchField 'name')}}Name{{/if}}{{#if (eq searchField 'email')}}Email{{/if}}{{#if (eq searchField 'id')}}ID{{/if}}{{#if (eq searchField 'phone')}}Phone{{/if}}
                    {{/unless}}
                </small>
                {{/if}}
            </div>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Email</th>
                        <th scope="col" class="py-3">Phone</th>
                        <th scope="col" class="py-3">Address</th>
                    </tr>
                </thead> 
                <tbody>
                    {{#each customers}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{user_id}}</td>
                        <td class="fw-semibold">{{full_name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td class="text-muted small">{{address}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>   

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="{{#if href}}{{href}}{{else}}?page={{value}}{{/if}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>

{{!-- 2. MODAL THÊM KHÁCH HÀNG --}}
{{#if isAddMode}}
<div class="modal fade" id="addCustomerModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">

            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase">New Customer</h4>
                <a href="/admin/customers"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST">
                    <div class="mb-4">
                        <input type="email" name="email" class="form-control form-control-lg rounded-pill border-2 fs-6"
                            placeholder="EMAIL" required style="border-color: #ccc;">
                    </div>

                    <div class="mb-4">
                        <input type="text" name="full_name"
                            class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="NAME" required
                            style="border-color: #ccc;">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <input type="tel" name="phone"
                                class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="PHONE"
                                style="border-color: #ccc;">
                        </div>
                        <div class="col-md-6 mb-4">
                            <input type="text" name="address"
                                class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="ADDRESS"
                                style="border-color: #ccc;">
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit"
                            class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Success!',
                text: 'Customer information updated successfully.',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                e.target.submit();
            });
        });
    }
</script>
{{/section}}
</div>
{{/if}}

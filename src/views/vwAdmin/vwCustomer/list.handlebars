<div class="card-body">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col" class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each list}}
            <tr class="">
                <td scope="row">{{user_id}}</td>
                <td>{{full_name}}</td>
                <td>{{email}}</td>
                <td>{{phone}}</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" href="/admin/customers/edit?id={{user_id}}" role="button">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
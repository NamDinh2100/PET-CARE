{{!-- 1. DANH SÁCH KHÁCH HÀNG --}}
{{#section 'css'}}
<style>
    /* --- GIỮ LẠI STYLE RIÊNG CHO MODAL --- */
    .modal-content {
        border: 3px solid #a58f8f;
        border-radius: 25px;
    }
    .modal-header {
        background-color: #d9d9d9;
        border-bottom: 3px solid #a58f8f;
        border-radius: 22px 22px 0 0;
    }
    
    /* Tùy chỉnh màu pagination */
    .table-container {
        min-height: 450px;
    }
    .pagination .page-link {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            padding: 0;
            border: 2px solid #2d5bff;
            color: #2d5bff;
            margin: 0 3px;
            font-weight: 600;
        }
    .pagination .page-item.active .page-link {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }
    .pagination .page-link:hover {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }

    /* Hiệu ứng làm mờ nền khi Modal hiện lên */
    .modal-backdrop.show {
        backdrop-filter: blur(5px);
        opacity: 0.5;
    }

    /* Tùy chỉnh màu pagination */
    .page-link {
        color: #333;
    }

    .page-item.active .page-link {
        background-color: #2d5bff;
        border-color: #2d5bff;
    }

    /* Advanced Search Styling */
    .search-form .form-select {
        border-right: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .search-form .form-control {
        border-left: none;
        border-radius: 0 25px 25px 0 !important;
    }

    .search-form .input-group-prepend .form-select {
        border-radius: 25px 0 0 25px !important;
    }

    .search-input-rounded {
        border-radius: 0 25px 25px 0;
    }
</style>
{{/section}}

{{!-- Advanced Search Section --}}
<div class="row mb-4">
    <div class="col-md-10 mx-auto">
        <form action="/admin/customers" method="GET" class="search-form">
            <div class="input-group">
                <div class="input-group-prepend">
                    <select name="field" class="form-select border-dark" style="min-width: 180px; max-width: 180px; border-top-right-radius: 0; border-bottom-right-radius: 0;">
                        <option value="" {{#unless searchField}}selected{{/unless}}>Select Field</option>
                        <option value="id" {{#if (eq searchField 'id')}}selected{{/if}}>ID</option>
                        <option value="name" {{#if (eq searchField 'name')}}selected{{/if}}>Name</option>
                        <option value="email" {{#if (eq searchField 'email')}}selected{{/if}}>Email</option>
                        <option value="phone" {{#if (eq searchField 'phone')}}selected{{/if}}>Phone</option>
                    </select>
                </div>
                <input type="text" name="q" class="form-control border-dark search-input-rounded ps-4 bg-white"
                    placeholder="SEARCH CUSTOMERS..." aria-label="Search" value="{{searchQuery}}">
                <button type="submit" class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary btn btn-link p-0">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            {{#if isSearchMode}}
            <div class="mt-2">
                <span class="badge bg-info me-2">
                    <i class="bi bi-search me-1"></i>
                    Search: "{{searchQuery}}" in 
                    {{#if (eq searchField 'id')}}ID{{/if}}
                    {{#if (eq searchField 'name')}}Name{{/if}}
                    {{#if (eq searchField 'email')}}Email{{/if}}
                    {{#if (eq searchField 'phone')}}Phone{{/if}}
                </span>
                <a href="/admin/customers" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x me-1"></i>Clear Search
                </a>
            </div>
            {{/if}}
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-0 brand-font fw-bold text-uppercase">Customer</h4>
                {{#if isSearchMode}}
                <small class="text-muted">
                    {{customers.length}} result(s) found for "{{searchQuery}}"
                    {{#if searchField}}
                        in {{#if (eq searchField 'name')}}Name{{/if}}{{#if (eq searchField 'email')}}Email{{/if}}{{#if (eq searchField 'id')}}ID{{/if}}{{#if (eq searchField 'phone')}}Phone{{/if}}
                    {{/if}}
                </small>
                {{/if}}
            </div>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Email</th>
                        <th scope="col" class="py-3">Phone</th>
                        <th scope="col" class="py-3">Address</th>
                    </tr>
                </thead> 
                <tbody>
                    {{#each customers}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{user_id}}</td>
                        <td class="fw-semibold">{{full_name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td class="text-muted small">{{address}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>   

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="{{#if href}}{{href}}{{else}}?page={{value}}{{/if}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Success!',
                text: 'Customer information updated successfully.',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                e.target.submit();
            });
        });
    }
    
    // Handle search form submission validation
    const searchForm = document.querySelector('.search-form');
    if (searchForm) {
        searchForm.addEventListener('submit', function(e) {
            const searchField = document.querySelector('select[name="field"]').value;
            const searchQuery = document.querySelector('input[name="q"]').value.trim();
            
            // Check if field is not selected
            if (!searchField || searchField === '') {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Field Required',
                    text: 'Please select a field before searching.',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#2d5bff'
                });
                return false;
            }
            
            // Check if search query is empty
            if (searchQuery === '') {
                e.preventDefault();
                Swal.fire({
                    icon: 'warning',
                    title: 'Empty Search',
                    text: 'Please enter a search term.',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#2d5bff'
                });
                return false;
            }
        });
    }
    
    // Show success notifications
    const urlParams = new URLSearchParams(window.location.search);
    const success = urlParams.get('success');
    
    if (success === 'delete') {
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: 'Customer deleted successfully.',
            timer: 3000,
            showConfirmButton: false,
            customClass: {
                popup: 'swal2-popup'
            }
        });
        // Clean URL
        window.history.replaceState({}, '', '/admin/customers');
    }
</script>
{{/section}}
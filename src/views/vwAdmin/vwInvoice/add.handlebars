{{#section 'css'}}
    <style>
        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .card {
            border: 2px solid #dee2e6;
        }
        
        .btn-primary {
            background-color: #2d5bff;
            border-color: #2d5bff;
        }
        
        .btn-primary:hover {
            background-color: #1a3fd4;
            border-color: #1a3fd4;
        }
    </style>
{{/section}}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex align-items-center mb-4">
                <a href="/admin/invoices" class="btn btn-outline-secondary rounded-circle me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h2 class="fw-bold mb-0" style="font-family: 'Abhaya Libre', serif;">CREATE NEW INVOICE</h2>
            </div>

            <div class="card rounded-4 shadow-sm">
                <div class="card-body p-4">
                    <form method="POST" action="/admin/invoices/add">
                        <!-- Appointment Selection -->
                        <div class="mb-4">
                            <label for="appointment_id" class="form-label">
                                <i class="bi bi-calendar-check me-2"></i>Select Appointment
                            </label>
                            <select class="form-select rounded-pill border-2" id="appointment_id" name="appointment_id" required>
                                <option value="">-- Choose an appointment --</option>
                                {{#each appointments}}
                                <option value="{{appointment_id}}">
                                    Appointment #{{appointment_id}} - {{customer_name}} - {{formatDate appointment_date}}
                                </option>
                                {{/each}}
                            </select>
                            <small class="text-muted">Only completed appointments without invoices are shown</small>
                        </div>

                        <!-- Total Amount -->
                        <div class="mb-4">
                            <label for="total_amount" class="form-label">
                                <i class="bi bi-currency-dollar me-2"></i>Total Amount
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2">$</span>
                                <input type="number" step="0.01" class="form-control border-2" id="total_amount" name="total_amount" placeholder="Enter total amount" required>
                            </div>
                        </div>

                        <!-- Payment Status -->
                        <div class="mb-4">
                            <label for="payment_status" class="form-label">
                                <i class="bi bi-cash-stack me-2"></i>Payment Status
                            </label>
                            <select class="form-select rounded-pill border-2" id="payment_status" name="payment_status" required>
                                <option value="unpaid">Unpaid</option>
                                <option value="paid">Paid</option>
                                <option value="partial">Partial Payment</option>
                            </select>
                        </div>

                        <!-- Payment Method -->
                        <div class="mb-4">
                            <label for="payment_method" class="form-label">
                                <i class="bi bi-credit-card me-2"></i>Payment Method
                            </label>
                            <select class="form-select rounded-pill border-2" id="payment_method" name="payment_method">
                                <option value="">-- Select payment method --</option>
                                <option value="cash">Cash</option>
                                <option value="credit_card">Credit Card</option>
                                <option value="debit_card">Debit Card</option>
                                <option value="bank_transfer">Bank Transfer</option>
                                <option value="e_wallet">E-Wallet</option>
                            </select>
                        </div>

                        <!-- Notes -->
                        <div class="mb-4">
                            <label for="notes" class="form-label">
                                <i class="bi bi-pencil-square me-2"></i>Notes
                            </label>
                            <textarea class="form-control border-2 rounded-3" id="notes" name="notes" rows="4" placeholder="Enter any additional notes or comments..."></textarea>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/admin/invoices" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4">
                                <i class="bi bi-check-circle me-2"></i>Create Invoice
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'css'}}
    <style>
        .invoice-container {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        
        .invoice-header {
            border-bottom: 3px solid #2d5bff;
            padding-bottom: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .invoice-info-box {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 12px;
            border-left: 4px solid #2d5bff;
        }
        
        .info-label {
            font-weight: 600;
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.3rem;
        }
        
        .info-value {
            font-size: 1.1rem;
            color: #212529;
            font-weight: 500;
        }
        
        .badge-status {
            font-size: 1rem;
            padding: 0.5rem 1.5rem;
        }
        
        .total-amount {
            font-size: 2rem;
            font-weight: bold;
            color: #28a745;
        }
        
        @media print {
            .no-print {
                display: none !important;
            }
            .invoice-container {
                box-shadow: none;
            }
        }
    </style>
{{/section}}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center mb-4 no-print">
                <div class="d-flex align-items-center">
                    <a href="/admin/invoices" class="btn btn-outline-secondary rounded-circle me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <h2 class="fw-bold mb-0" style="font-family: 'Abhaya Libre', serif;">INVOICE DETAILS</h2>
                </div>
                <div class="btn-group">
                    <button onclick="window.print()" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-printer me-2"></i>Print
                    </button>
                    <a href="/admin/invoices/edit/{{invoice.invoice_id}}" class="btn btn-outline-warning rounded-pill px-4">
                        <i class="bi bi-pencil me-2"></i>Edit
                    </a>
                </div>
            </div>

            <!-- Invoice Container -->
            <div class="invoice-container">
                <!-- Invoice Header -->
                <div class="invoice-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h1 class="fw-bold mb-3" style="font-family: 'Abhaya Libre', serif; color: #2d5bff;">
                                INVOICE
                            </h1>
                            <p class="mb-1"><strong>Invoice ID:</strong> #{{invoice.invoice_id}}</p>
                            <p class="mb-1"><strong>Invoice Date:</strong> {{formatDate invoice.invoice_date}}</p>
                            {{#if invoice.payment_date}}
                            <p class="mb-0"><strong>Payment Date:</strong> {{formatDate invoice.payment_date}}</p>
                            {{/if}}
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h3 class="fw-bold mb-2" style="font-family: 'Abhaya Libre', serif;">PetCareUS</h3>
                            <p class="mb-1">123 Pet Care Street</p>
                            <p class="mb-1">Phone: (123) 456-7890</p>
                            <p class="mb-0">Email: info@petcareus.com</p>
                        </div>
                    </div>
                </div>

                <!-- Customer & Appointment Info -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="invoice-info-box mb-3">
                            <h5 class="fw-bold mb-3">
                                <i class="bi bi-person-circle me-2"></i>Customer Information
                            </h5>
                            <div class="mb-2">
                                <div class="info-label">Name:</div>
                                <div class="info-value">{{invoice.customer_name}}</div>
                            </div>
                            <div class="mb-0">
                                <div class="info-label">Phone:</div>
                                <div class="info-value">{{invoice.customer_phone}}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="invoice-info-box mb-3">
                            <h5 class="fw-bold mb-3">
                                <i class="bi bi-calendar-check me-2"></i>Appointment Information
                            </h5>
                            <div class="mb-2">
                                <div class="info-label">Appointment ID:</div>
                                <div class="info-value">#{{invoice.appointment_id}}</div>
                            </div>
                            <div class="mb-2">
                                <div class="info-label">Appointment Date:</div>
                                <div class="info-value">{{formatDate invoice.appointment_date}}</div>
                            </div>
                            <div class="mb-0">
                                <div class="info-label">Veterinarian:</div>
                                <div class="info-value">{{invoice.veterinarian_name}}</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="invoice-info-box">
                            <h5 class="fw-bold mb-3">
                                <i class="bi bi-credit-card me-2"></i>Payment Details
                            </h5>
                            <div class="mb-2">
                                <div class="info-label">Payment Status:</div>
                                <div>
                                    {{#if (eq invoice.payment_status 'paid')}}
                                        <span class="badge badge-status bg-success">PAID</span>
                                    {{else if (eq invoice.payment_status 'unpaid')}}
                                        <span class="badge badge-status bg-danger">UNPAID</span>
                                    {{else}}
                                        <span class="badge badge-status bg-warning text-dark">PARTIAL</span>
                                    {{/if}}
                                </div>
                            </div>
                            {{#if invoice.payment_method}}
                            <div class="mb-0">
                                <div class="info-label">Payment Method:</div>
                                <div class="info-value text-capitalize">{{invoice.payment_method}}</div>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="invoice-info-box text-center py-4">
                            <div class="info-label mb-2">TOTAL AMOUNT</div>
                            <div class="total-amount">${{invoice.total_amount}}</div>
                        </div>
                    </div>
                </div>

                <!-- Notes -->
                {{#if invoice.notes}}
                <div class="invoice-info-box mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-pencil-square me-2"></i>Notes
                    </h5>
                    <p class="mb-0">{{invoice.notes}}</p>
                </div>
                {{/if}}

                <!-- Footer -->
                <div class="text-center mt-5 pt-4 border-top">
                    <p class="text-muted mb-0">Thank you for choosing PetCareUS!</p>
                    <p class="text-muted small">For any questions regarding this invoice, please contact us.</p>
                </div>
            </div>

            <!-- Status Update Form (Only for unpaid/partial) -->
            {{#if (or (eq invoice.payment_status 'unpaid') (eq invoice.payment_status 'partial'))}}
            <div class="card mt-4 border-2 rounded-4 no-print">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Update Payment Status</h5>
                    <form method="POST" action="/admin/invoices/update-status/{{invoice.invoice_id}}" class="row align-items-end">
                        <div class="col-md-8">
                            <label class="form-label fw-bold">New Status:</label>
                            <select name="status" class="form-select rounded-pill border-2" required>
                                <option value="unpaid" {{#if (eq invoice.payment_status 'unpaid')}}selected{{/if}}>Unpaid</option>
                                <option value="partial" {{#if (eq invoice.payment_status 'partial')}}selected{{/if}}>Partial Payment</option>
                                <option value="paid">Paid</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success rounded-pill w-100">
                                <i class="bi bi-check-circle me-2"></i>Update Status
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{#section 'css'}}
<style>
    /* --- 1. CSS HIỆU ỨNG LÀM MỜ & NHẠT (QUAN TRỌNG) --- */
    .content-blur {
        filter: blur(4px);
        /* Làm nhòe đi 4px */
        opacity: 0.4;
        /* Làm nhạt đi (chỉ còn 40% độ rõ) */
        pointer-events: none;
        /* Vô hiệu hóa chuột (không bấm được) */
        user-select: none;
        /* Không cho bôi đen chữ */
        transition: all 0.3s ease;
        /* Hiệu ứng chuyển đổi mượt mà */
    }

    /* --- 2. CSS MODAL & GIAO DIỆN --- */
    .modal-content {
        border: 3px solid #0033ff;
        border-radius: 25px;
    }

    .modal-header {
        background-color: #0900b8; /* Màu nền xám header */
        border-bottom: 2px solid #a58f8f;
        border-radius: 20px 20px 0 0;
        padding-top: 15px;
        padding-bottom: 15px;
    }

        /* Làm tối nền xung quanh modal một chút */
        .modal-backdrop.show {
            backdrop-filter: blur(2px);
            opacity: 0.2; 
        }
        
        /* Tùy chỉnh phân trang */
        .table-container {
            min-height: 450px;
        }
        .pagination .page-link {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 6px;
            padding: 0;
            border: 2px solid #2d5bff;
            color: #2d5bff;
            margin: 0 3px;
            font-weight: 600;
        }
        .pagination .page-item.active .page-link {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }
        .pagination .page-link:hover {
            background-color: #2d5bff;
            color: white;
            border-color: #2d5bff;
        }

        /* Advanced Search Styling */
        .search-form .form-select {
            border-right: none;
            font-weight: 600;
            background-color: #f8f9fa;
        }

        .search-form .form-control {
            border-left: none;
            border-radius: 0 25px 25px 0 !important;
        }

        .search-form .input-group-prepend .form-select {
            border-radius: 25px 0 0 25px !important;
        }

        .search-input-rounded {
            border-radius: 0 25px 25px 0;
        }
    </style>
{{/section}}

{{!-- Advanced Search Section --}}
<div class="row mb-4">
    <div class="col-md-10 mx-auto">
        <form action="/admin/medicines" method="GET" class="search-form">
            <div class="input-group">
                <div class="input-group-prepend">
                    <select name="field" class="form-select border-dark" style="min-width: 180px; max-width: 180px; border-top-right-radius: 0; border-bottom-right-radius: 0;">
                        <option value="" {{#unless searchField}}selected{{/unless}}>Select Field</option>
                        <option value="id" {{#if (eq searchField 'id')}}selected{{/if}}>ID</option>
                        <option value="name" {{#if (eq searchField 'name')}}selected{{/if}}>Name</option>
                        <option value="form" {{#if (eq searchField 'form')}}selected{{/if}}>Form</option>
                        <option value="category" {{#if (eq searchField 'category')}}selected{{/if}}>Category</option>
                    </select>
                </div>
                <input type="text" name="q" class="form-control border-dark search-input-rounded ps-4 bg-white"
                    placeholder="SEARCH MEDICINES..." aria-label="Search" value="{{searchQuery}}">
                <button type="submit" class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary btn btn-link p-0">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            {{#if isSearchMode}}
            <div class="mt-2">
                <span class="badge bg-info me-2">
                    <i class="bi bi-search me-1"></i>
                    Search: "{{searchQuery}}" in 
                    {{#if (eq searchField 'id')}}ID{{/if}}
                    {{#if (eq searchField 'name')}}Name{{/if}}
                    {{#if (eq searchField 'form')}}Form{{/if}}
                    {{#if (eq searchField 'category')}}Category{{/if}}
                </span>
                <a href="/admin/medicines" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x me-1"></i>Clear Search
                </a>
            </div>
            {{/if}}
        </form>
    </div>
</div>

{{!-- 1. DANH SÁCH THUỐC (NỀN) --}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-0 brand-font fw-bold text-uppercase">Medicine</h4>
                {{#if isSearchMode}}
                <small class="text-muted">
                    {{medicines.length}} result(s) found for "{{searchQuery}}"
                    {{#if searchField}}
                        in {{#if (eq searchField 'name')}}Name{{/if}}{{#if (eq searchField 'form')}}Form{{/if}}{{#if (eq searchField 'id')}}ID{{/if}}{{#if (eq searchField 'category')}}Category{{/if}}
                    {{/if}}
                </small>
                {{/if}}
            </div>

            <a class="btn btn-outline-success" href="/admin/medicines/add">
                <i class="bi bi-plus-lg me-1"></i> New
            </a>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Form</th>
                        <th scope="col" class="py-3">Category</th>
                        <th scope="col" class="py-3">Description</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each medicines}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{medicine_id}}</td>
                        <td class="fw-semibold">{{medicine_name}}</td>
                        <td><span class="badge text-dark">{{form}}</span></td>
                        <td><span class="badge text-dark">{{category}}</span></td>
                        <td class="text-muted small">{{description}}</td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-outline-primary" href="/admin/medicines/edit?id={{medicine_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="{{{href}}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>

{{!-- 2. MODAL POPUP (FORM NHẬP LIỆU) --}}
{{#if isAddMode}}
<div class="modal fade" id="addMedicineModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">

            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase text-white">New Medicine</h4>
                <a href="/admin/medicines"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST" id="frmMedicine">
                    <div class="mb-4">
                        <input type="text" name="medicine_name"
                            class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="MEDICINE NAME"
                            required style="border-color: #ccc;">
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <select name="form" class="form-select form-select-lg rounded-pill border-2 fs-6 text-muted"
                                style="border-color: #ccc;">
                                <option selected disabled>FORM</option>
                                <option value="Tablet">Tablet</option>
                                <option value="Capsule">Capsule</option>
                                <option value="Liquid">Liquid</option>
                                <option value="Injection">Injection</option>
                                <option value="Cream">Cream</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-4">
                            <select name="category"
                                class="form-select form-select-lg rounded-pill border-2 fs-6 text-muted"
                                style="border-color: #ccc;">
                                <option selected disabled>CATEGORY</option>
                                <option value="Antibiotic">Antibiotic</option>
                                <option value="Pain Relief">Pain Relief</option>
                                <option value="Vitamin">Vitamin</option>
                                <option value="Vaccine">Vaccine</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-4">
                        <textarea name="description" class="form-control border-2 fs-6"
                            placeholder="DESCRIPTION (Optional)" rows="3"
                            style="border-color: #ccc; border-radius: 20px; padding: 15px 20px;"></textarea>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit"
                            class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        
        // --- 1. SEARCH FORM VALIDATION ---
        const searchForm = document.querySelector('.search-form');
        if (searchForm) {
            searchForm.addEventListener('submit', function (e) {
                const selectField = this.querySelector('select[name="field"]');
                const searchInput = this.querySelector('input[name="q"]');
                
                const fieldValue = selectField.value;
                const queryValue = searchInput.value.trim();

                // Check if the search field is selected
                if (!fieldValue || fieldValue === "") {
                    e.preventDefault(); // Stop form submission
                    Swal.fire({
                        icon: 'error',
                        title: 'Selection Required',
                        text: 'Please select a search field (ID, Name, or Price) before searching.',
                        confirmButtonColor: '#0900b8',
                        confirmButtonText: 'Got it'
                    });
                    return false;
                }

                // Check if the search input is empty
                if (queryValue === "") {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Empty Search',
                        text: 'Please enter a keyword to search.',
                        confirmButtonColor: '#2d5bff',
                        confirmButtonText: 'OK'
                    });
                    return false;
                }
            });
        }

        const serviceForm = document.querySelector('#frmService');
        if (serviceForm) {
            serviceForm.addEventListener('submit', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Confirm Submission',
                    text: 'Are you sure you want to save this service?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#0900b8',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, save it!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Processing your request...',
                            icon: 'success',
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => {
                            this.submit(); 
                        });
                    }
                });
            });
        }

        const addModalElement = document.getElementById('addServiceModal');
        if (addModalElement) {
            const myModal = new bootstrap.Modal(addModalElement);
            myModal.show();
        }

        const urlParams = new URLSearchParams(window.location.search);
        const successType = urlParams.get('success');

        if (successType) {
            let config = {
                icon: 'success',
                timer: 3000,
                showConfirmButton: false
            };

            if (successType === 'add') {
                config.title = 'Created!';
                config.text = 'The new service has been successfully added.';
            } else if (successType === 'edit') {
                config.title = 'Updated!';
                config.text = 'The service information has been updated.';
            }

            Swal.fire(config);

            window.history.replaceState({}, '', '/admin/services');
        }
    });
</script>
{{/section}}
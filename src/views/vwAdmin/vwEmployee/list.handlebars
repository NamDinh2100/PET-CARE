{{#section 'css'}}
<style>
    .modal-content {
        border: 3px solid #a58f8f;
        border-radius: 25px;
    }

    .modal-header {
        background-color: #d9d9d9;
        border-bottom: 3px solid #a58f8f;
        border-radius: 22px 22px 0 0;
    }

    .table-container {
        min-height: 450px;
    }

    .pagination .page-link {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        padding: 0;
        border: 2px solid #2d5bff;
        color: #2d5bff;
        margin: 0 3px;
        font-weight: 600;
    }

    .pagination .page-item.active .page-link {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }

    .pagination .page-link:hover {
        background-color: #2d5bff;
        color: white;
        border-color: #2d5bff;
    }

    .modal-backdrop.show {
        backdrop-filter: blur(5px);
        opacity: 0.5;
    }

    .page-link {
        color: #333;
    }

    .page-item.active .page-link {
        background-color: #2d5bff;
        border-color: #2d5bff;
    }

    .role-badge {
        min-width: 100px;
        padding: 8px 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .role-admin {
        background-color: #ffe5e5;
        color: #d63384;
        border: 1px solid #d63384;
    }

    .role-veterinarian {
        background-color: #e8f5e9;
        color: #198754;
        border: 1px solid #198754;
    }

    .role-staff {
        background-color: #e7f1ff;
        color: #0d6efd;
        border: 1px solid #0d6efd;
    }

    .search-form .form-select {
        border-right: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .search-form .form-control {
        border-left: none;
        border-radius: 0 25px 25px 0 !important;
    }

    .search-form .input-group-prepend .form-select {
        border-radius: 25px 0 0 25px !important;
    }

    .search-input-rounded {
        border-radius: 0 25px 25px 0;
    }
</style>
{{/section}}

<div class="row mb-4">
    <div class="col-md-10 mx-auto">
        <form action="/admin/employees" method="GET" class="search-form">
            <div class="input-group">
                <div class="input-group-prepend">
                    <select name="field" class="form-select border-dark"
                        style="min-width: 180px; max-width: 180px; border-top-right-radius: 0; border-bottom-right-radius: 0;">
                        <option value="" {{#unless searchField}}selected{{/unless}}>Select Field</option>
                        <option value="id" {{#if (eq searchField 'id' )}}selected{{/if}}>ID</option>
                        <option value="name" {{#if (eq searchField 'name' )}}selected{{/if}}>Name</option>
                        <option value="email" {{#if (eq searchField 'email' )}}selected{{/if}}>Email</option>
                        <option value="phone" {{#if (eq searchField 'phone' )}}selected{{/if}}>Phone</option>
                        <option value="role" {{#if (eq searchField 'role' )}}selected{{/if}}>Role</option>
                    </select>
                </div>
                <input type="text" name="q" class="form-control border-dark search-input-rounded ps-4 bg-white"
                    placeholder="SEARCH EMPLOYEES..." aria-label="Search" value="{{searchQuery}}">
                <button type="submit"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary btn btn-link p-0">
                    <i class="bi bi-search"></i>
                </button>
            </div>
            {{#if isSearchMode}}
            <div class="mt-2">
                <span class="badge bg-info me-2">
                    <i class="bi bi-search me-1"></i>
                    Search: "{{searchQuery}}" in
                    {{#if (eq searchField 'id')}}ID{{/if}}
                    {{#if (eq searchField 'name')}}Name{{/if}}
                    {{#if (eq searchField 'email')}}Email{{/if}}
                    {{#if (eq searchField 'phone')}}Phone{{/if}}
                    {{#if (eq searchField 'role')}}Role{{/if}}
                </span>
                <a href="/admin/employees" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x me-1"></i>Clear Search
                </a>
            </div>
            {{/if}}
        </form>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="mb-0 brand-font fw-bold text-uppercase">EMPLOYEE</h4>
                {{#if isSearchMode}}
                <small class="text-muted">
                    {{employees.length}} result(s) found for "{{searchQuery}}"
                    {{#if searchField}}
                    in {{#if (eq searchField 'name')}}Name{{/if}}{{#if (eq searchField 'email')}}Email{{/if}}{{#if (eq
                    searchField 'id')}}ID{{/if}}{{#if (eq searchField 'phone')}}Phone{{/if}}{{#if (eq searchField
                    'role')}}Role{{/if}}
                    {{/if}}
                </small>
                {{/if}}
            </div>

            <div class="d-flex align-items-center gap-3">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-funnel me-1"></i>
                        {{#if currentRole}}
                        {{#if (eq currentRole 'admin')}}Admin{{/if}}
                        {{#if (eq currentRole 'veterinarian')}}Veterinarian{{/if}}
                        {{#if (eq currentRole 'staff')}}Staff{{/if}}
                        {{else}}All Roles{{/if}}
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item {{#unless currentRole}}active{{/unless}}"
                                href="/admin/employees">All Roles</a></li>
                        <a class="dropdown-item {{#if (eq 'admin' currentRole)}}active{{/if}}"
                            href="/admin/employees?role=admin">Admin</a>
                        <a class="dropdown-item {{#if (eq 'veterinarian' currentRole)}}active{{/if}}"
                            href="/admin/employees?role=veterinarian">Veterinarian</a>
                        <a class="dropdown-item {{#if (eq 'staff' currentRole)}}active{{/if}}"
                            href="/admin/employees?role=staff">Staff</a>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        {{#each roles}}
                        <li><a class="dropdown-item {{#if (eq this ../currentRole)}}active{{/if}}"
                                href="/admin/employees?role={{this}}">{{this}}</a></li>
                        {{/each}}
                    </ul>
                </div>

                <a class="btn btn-outline-success" href="/admin/employees/add">
                    <i class="bi bi-plus-lg me-1"></i> New
                </a>
            </div>
        </div>

        <div class="table-responsive table-container">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Email</th>
                        <th scope="col" class="py-3">Phone</th>
                        <th scope="col" class="py-3">Role</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{user_id}}</td>
                        <td class="fw-semibold">{{full_name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td>
                            <span class="badge rounded-pill text-uppercase role-badge role-{{role}}">
                                {{role}}
                            </span>
                        </td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-outline-primary" href="/admin/employees/edit?id={{user_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-start mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    {{#each pageNumbers}}
                    <li class="page-item {{#if isCurrent}}active{{/if}}">
                        <a class="page-link" href="{{#if href}}{{href}}{{else}}?page={{value}}{{/if}}">{{value}}</a>
                    </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

    </div>
</div>

{{#section 'js'}}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchForm = document.querySelector('.search-form');
        if (searchForm) {
            searchForm.addEventListener('submit', function (e) {
                const searchField = document.querySelector('select[name="field"]').value;
                const searchQuery = document.querySelector('input[name="q"]').value.trim();

                if (!searchField || searchField === '') {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Field Required',
                        text: 'Please select a field before searching.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2d5bff'
                    });
                    return false;
                }

                if (searchQuery === '') {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'warning',
                        title: 'Empty Search',
                        text: 'Please enter a search term.',
                        confirmButtonText: 'OK',
                        confirmButtonColor: '#2d5bff'
                    });
                    return false;
                }
            });
        }

        const urlParams = new URLSearchParams(window.location.search);
        const success = urlParams.get('success');

        if (success === 'add') {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Employee added successfully.',
                timer: 3000,
                showConfirmButton: false,
                customClass: {
                    popup: 'swal2-popup'
                }
            });
            window.history.replaceState({}, '', '/admin/employees');
        } else if (success === 'edit') {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Employee updated successfully.',
                timer: 3000,
                showConfirmButton: false,
                customClass: {
                    popup: 'swal2-popup'
                }
            });

            window.history.replaceState({}, '', '/admin/employees');
        }
    });
</script>
{{/section}}
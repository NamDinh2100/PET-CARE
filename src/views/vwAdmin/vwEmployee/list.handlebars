{{#section 'css'}}
<style>
    /* --- GIỮ LẠI STYLE RIÊNG CHO MODAL --- */
    .modal-content {
        border: 3px solid #a58f8f;
        border-radius: 25px;
    }

    .modal-header {
        background-color: #d9d9d9;
        border-bottom: 3px solid #a58f8f;
        border-radius: 22px 22px 0 0;
    }

    /* Hiệu ứng làm mờ nền khi Modal hiện lên */
    .modal-backdrop.show {
        backdrop-filter: blur(5px);
        opacity: 0.5;
    }

    /* Tùy chỉnh màu pagination */
    .page-link {
        color: #333;
    }

    .page-item.active .page-link {
        background-color: #2d5bff;
        border-color: #2d5bff;
    }

    .role-badge {
        min-width: 100px;
        /* Độ rộng cố định để thẳng hàng */
        padding: 8px 12px;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    /* 1. ADMIN - Màu đỏ (Quyền lực/Cao nhất) */
    .role-admin {
        background-color: #ffe5e5;
        /* Nền đỏ nhạt */
        color: #d63384;
        /* Chữ đỏ đậm */
        border: 1px solid #d63384;
    }

    /* 2. VETERINARIAN - Màu xanh lá (Y tế/Bác sĩ) */
    .role-veterinarian {
        background-color: #e8f5e9;
        /* Nền xanh lá nhạt */
        color: #198754;
        /* Chữ xanh lá đậm */
        border: 1px solid #198754;
    }

    /* 3. STAFF - Màu xanh dương hoặc Xám (Nhân viên) */
    .role-staff {
        background-color: #e7f1ff;
        /* Nền xanh dương nhạt */
        color: #0d6efd;
        /* Chữ xanh dương đậm */
        border: 1px solid #0d6efd;
    }
</style>
{{/section}}

<div class="row mb-4">
    <div class="col-md-8 mx-auto">
        <form action="/admin/search" method="GET">
            <input type="hidden" name="type" value="employees">
            <div class="input-group">
                <input type="text" name="q" class="form-control border-dark search-input-rounded ps-4 bg-white"
                    placeholder="SEARCH EMPLOYEES..." aria-label="Search">
                <button type="submit"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 z-1 cursor-pointer text-secondary btn btn-link p-0">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

{{!-- 1. DANH SÁCH NHÂN VIÊN (UNIFIED CONTAINER) --}}
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="mb-0 brand-font fw-bold text-uppercase">EMPLOYEE</h4>

            <a class="btn btn-outline-success" href="/admin/employees/add">
                <i class="bi bi-plus-lg me-1"></i> New
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="ps-3 py-3 rounded-start-3">ID</th>
                        <th scope="col" class="py-3">Name</th>
                        <th scope="col" class="py-3">Email</th>
                        <th scope="col" class="py-3">Phone</th>
                        <th scope="col" class="py-3">Role</th>
                        <th scope="col" class="text-end pe-3 py-3 rounded-end-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employees}}
                    <tr>
                        <td class="ps-3 fw-bold text-secondary">#{{user_id}}</td>
                        <td class="fw-semibold">{{full_name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td>
                            <span class="badge rounded-pill text-uppercase role-badge role-{{role}}">
                                {{role}}
                            </span>
                        </td>
                        <td class="text-end pe-3">
                            <a class="btn btn-sm btn-light text-primary rounded-pill border"
                                href="/admin/employees/edit?id={{user_id}}">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    <li class="page-item active"><a class="page-link rounded-circle mx-1 shadow-sm" href="#">1</a></li>
                    <li class="page-item"><a class="page-link rounded-circle mx-1 text-dark border-0 bg-light"
                            href="#">2</a></li>
                    <li class="page-item"><a class="page-link rounded-circle mx-1 text-dark border-0 bg-light"
                            href="#">3</a></li>
                </ul>
            </nav>
        </div>

    </div>
</div>

{{!-- 2. MODAL POPUP (Bootstrap Standard) --}}
{{#if isAddMode}}
<div class="modal fade" id="addEmployeeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">

            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase">New Employee</h4>
                <a href="/admin/employees"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST">
                    <div class="mb-4">
                        <input type="email" name="email" class="form-control form-control-lg rounded-pill border-2 fs-6"
                            placeholder="EMAIL" required style="border-color: #ccc;">
                    </div>

                    <div class="mb-4">
                        <input type="text" name="full_name"
                            class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="NAME" required
                            style="border-color: #ccc;">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <input type="tel" name="phone"
                                class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="PHONE"
                                style="border-color: #ccc;">
                        </div>
                        <div class="col-md-6 mb-4">
                            <select name="role"
                                class="form-select form-select-lg rounded-pill border-2 fs-6 text-uppercase text-muted"
                                style="border-color: #ccc;">
                                <option selected disabled>ROLE</option>
                                <option value="admin">Admin</option>
                                <option value="veterinarian">Veterinarian</option>
                                <option value="staff">Staff</option>
                            </select>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit"
                            class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#section 'js'}}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Tự động bật Modal nếu đang ở chế độ Add (có phần tử #addEmployeeModal)
        var addModalElement = document.getElementById('addEmployeeModal');
        if (addModalElement) {
            var myModal = new bootstrap.Modal(addModalElement);
            myModal.show();
        }
    });
</script>
{{/section}}
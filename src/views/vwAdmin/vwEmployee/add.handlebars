{{#section 'css'}}
<style>

    .pop-up {
    ;
        margin-top: 80px;
        margin-bottom: 80px;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1050;
    }
    .modal-content {
        border: 3px solid #2600ff;
        border-radius: 25px;
    }

    .modal-header {
        background-color: #0900b8;
        border-radius: 20px 0 20px 0;
        border-radius: 22px 22px 0 0;
    }
</style>

{{/section}}

<div class="pop-up">
    <div class="modal-dialog modal-dialog-centered bg-white">
        <div class="modal-content shadow-lg">

            <div class="modal-header justify-content-center position-relative py-3">
                <h4 class="modal-title brand-font fw-bold text-uppercase text-white">New Employee</h4>
                <a href="/admin/employees"
                    class="position-absolute end-0 top-50 translate-middle-y me-3 text-danger fs-3 text-decoration-none">
                    <i class="bi bi-x-circle-fill"></i>
                </a>
            </div>

            <div class="modal-body p-5">
                <form method="POST">
                    <div class="mb-4">
                        <input type="email" name="email" class="form-control form-control-lg rounded-pill border-2 fs-6"
                            placeholder="EMAIL" required style="border-color: #ccc;">
                    </div>

                    <div class="mb-4">
                        <input type="text" name="full_name"
                            class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="NAME" required
                            style="border-color: #ccc;">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <input type="tel" name="phone"
                                class="form-control form-control-lg rounded-pill border-2 fs-6" placeholder="PHONE"
                                style="border-color: #ccc;">
                        </div>
                        <div class="col-md-6 mb-4">
                            <select name="role"
                                class="form-select form-select-lg rounded-pill border-2 fs-6 text-uppercase text-muted"
                                style="border-color: #ccc;">
                                <option selected disabled>ROLE</option>
                                <option value="admin">Admin</option>
                                <option value="veterinarian">Veterinarian</option>
                                <option value="staff">Staff</option>
                            </select>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit"
                            class="btn btn-outline-primary rounded-pill px-5 py-2 fw-bold text-uppercase border-2">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.querySelector('form').addEventListener('submit', function(e) {
        e.preventDefault();
        const form = e.target;
        const email = form.querySelector('[name="email"]').value.trim();
        const fullName = form.querySelector('[name="full_name"]').value.trim();
        const phone = form.querySelector('[name="phone"]').value.trim();
        const role = form.querySelector('[name="role"]').value;
        
        // Email validation regex
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        const phoneRegex = /^[0-9]{10,11}$/;
        
        // Validation checks
        if (!email) {
            Swal.fire({
                title: 'Validation Error!',
                text: 'Email is required.',
                icon: 'error',
                confirmButtonColor: '#dc3545'
            });
            return;
        }
        
        if (!emailRegex.test(email)) {
            Swal.fire({
                title: 'Validation Error!',
                text: 'Please enter a valid email address.',
                icon: 'error',
                confirmButtonColor: '#dc3545'
            });
            return;
        }
        
        if (!fullName) {
            Swal.fire({
                title: 'Validation Error!',
                text: 'Full name is required.',
                icon: 'error',
                confirmButtonColor: '#dc3545'
            });
            return;
        }
        
        if (phone && !phoneRegex.test(phone)) {
            Swal.fire({
                title: 'Validation Error!',
                text: 'Phone number must be 10-11 digits.',
                icon: 'error',
                confirmButtonColor: '#dc3545'
            });
            return;
        }
        
        if (!role || role === 'ROLE') {
            Swal.fire({
                title: 'Validation Error!',
                text: 'Please select a role.',
                icon: 'error',
                confirmButtonColor: '#dc3545'
            });
            return;
        }
        
        // Confirmation before submit
        Swal.fire({
            title: 'Confirm Add',
            text: 'Are you sure you want to add this employee?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#28a745',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, Add!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Employee added successfully.',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then(() => {
                    form.submit();
                });
            }
        });
    });
</script>
{{/section}}
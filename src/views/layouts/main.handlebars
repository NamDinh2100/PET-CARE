    <style>
        /* Chỉ giữ lại các tùy chỉnh thương hiệu (Brand Identity) bắt buộc */
        :root {
            --primary-blue: #2d5bff;
        }

        body {
            font-family: 'Abhaya Libre', serif;
            background-color: #f8f9fa; /* Bootstrap bg-light equivalent */
        }

        /* Brand Logo Style */
        .brand-text {
            font-family: 'Abhaya Libre', serif;
            font-size: 2rem;
            color: #4a90e2;
        }
        
        .brand-icon {
            transform: rotate(-20deg);
        }

        /* Sidebar Item Active Override - Để dùng màu xanh thương hiệu thay vì xanh mặc định */
        .list-group-item.active {
            background-color: var(--primary-blue);
            border-color: var(--primary-blue);
            box-shadow: 0 4px 10px rgba(45, 91, 255, 0.3);
        }

        /* Search Input Rounded */
        .search-input-rounded {
            border-radius: 50px;
        }


    </style>


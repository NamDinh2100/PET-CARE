    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname;
            // Chọn các thẻ a trong list-group
            const navLinks = document.querySelectorAll('.list-group-item'); 

            navLinks.forEach(link => {
                const linkPath = link.getAttribute('href');
                // Logic so sánh đường dẫn
                if (currentPath === linkPath || (linkPath !== '/' && currentPath.includes(linkPath))) {
                    link.classList.add('active'); // Class active của Bootstrap sẽ tự đổi màu nền thành xanh
                    link.classList.remove('text-secondary'); // Xóa màu xám
                } else {
                    link.classList.remove('active');
                    link.classList.add('text-secondary');
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


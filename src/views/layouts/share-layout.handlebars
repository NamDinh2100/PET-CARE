</head>

<body>

    <nav class="navbar navbar-expand-lg bg-white border-bottom sticky-top py-3 px-4 shadow-sm">
        <div class="container-fluid">
            <div class="navbar-brand d-flex align-items-center fw-bold brand-text">
                <img src="/static/images/logo.png" alt="Logo" width="32" height="32" class="me-2">
                PetCareUS
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="mainNav">
        
                {{#unless isAuth}}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" href="/#home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/#about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/#contact">Contact</a></li>
                </ul>

                <div class="d-flex align-items-center ms-auto">
                        <a href="/signin" class="btn btn-outline-primary rounded-pill px-4 fw-bold">Sign In</a>
                        <a href="/signup" class="btn btn-primary rounded-pill px-4 fw-bold ms-3">Sign Up</a>
                    </div>

                {{else}}
                    {{#if (eq authUser.role 'customer')}}
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link active" href="/#home">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="/#about">About</a></li>
                            <li class="nav-item"><a class="nav-link" href="/#contact">Contact</a></li>
                        </ul>
                    {{/if}}
                    <div class="d-flex align-items-center ms-auto">
                        {{!-- User Profile Dropdown --}}
                        <div class="dropdown">
                            <a href="#"
                                class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle hidden-arrow"
                                data-bs-toggle="dropdown">
                                <div class="text-end me-2 lh-1 d-none d-md-block">
                                    <div class="fw-bold small text-uppercase">{{authUser.role}}</div>
                                    <div class="text-secondary" style="font-size: 0.8rem;">{{authUser.full_name}}</div>
                                </div>
                                {{#if (eq authUser.role 'customer')}}
                                <div class="shadow-sm"
                                    style="width: 40px; height: 40px; background-color: #28a745; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.2rem; font-family: 'Abhaya Libre', serif; border: 2px solid #000000;">
                                    {{getInitial authUser.full_name}}
                                </div>
                                {{else if (eq authUser.role 'veterinarian')}}
                                <div class="shadow-sm"
                                    style="width: 40px; height: 40px; background-color: #007bff; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.2rem; font-family: 'Abhaya Libre', serif; border: 2px solid #000000;">
                                    {{getInitial authUser.full_name}}
                                </div>
                                {{else if (eq authUser.role 'admin')}}
                                <div class="shadow-sm"
                                    style="width: 40px; height: 40px; background-color: #dc3545; color: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 1.2rem; font-family: 'Abhaya Libre', serif; border: 2px solid #000000;">
                                    {{getInitial authUser.full_name}}
                                </div>
                                {{else}}
                                <i class="bi bi-person-circle fs-2 text-primary"></i>
                                {{/if}}
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 rounded-3">
                                <li><a class="dropdown-item py-2" href="/profile"><i class="bi bi-person me-2"></i>My Account</a></li>
                                {{#if (eq authUser.role 'customer')}}
                                    <li><a class="dropdown-item py-2" href="/pets"><i class="bi bi-heart-pulse me-2"></i>My Pets</a></li>
                                    <li><a class="dropdown-item py-2" href="/appointments"><i class="bi bi-calendar-check me-2"></i>My Appointments</a></li>
                                {{/if}}
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item py-2" href="#" data-bs-toggle="modal" data-bs-target="#changePasswordModal"><i class="bi bi-key me-2"></i>Change password</a></li>
                                <li>
                                    <form id="frmSignOut" action="/signout" method="post" style="display: none;"></form>
                                    <a class="dropdown-item py-2 text-danger fw-bold"
                                        href="javascript: document.getElementById('frmSignOut').submit();">
                                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                {{/unless}}
                    
            </div>
        </div>
    </nav>

    
        {{{body}}}

        <!-- Change Password Modal -->
        <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border: 3px solid #0033ff; border-radius: 25px;">
                <div class="modal-header text-white" style="background-color: #0900b8; border-bottom: 2px solid #a58f8f; border-radius: 0px 0px 0 0; padding-top: 15px; padding-bottom: 15px;">
                    <h5 class="modal-title fw-bold" id="changePasswordModalLabel" style="font-family: 'Abhaya Libre', serif;">
                        <i class="bi bi-key me-2"></i>CHANGE PASSWORD
                    </h5>
                    <button type="button" class="btn-close btn-close-red" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="changePasswordForm" method="POST" action="/profile/change-password">
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label fw-bold" style="font-family: 'Abhaya Libre', serif;">Current Password</label>
                            <input type="password" class="form-control rounded-pill border-2 border-dark" id="currentPassword" name="current_password" required>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label fw-bold" style="font-family: 'Abhaya Libre', serif;">New Password</label>
                            <input type="password" class="form-control rounded-pill border-2 border-dark" id="newPassword" name="new_password" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label fw-bold" style="font-family: 'Abhaya Libre', serif;">Confirm New Password</label>
                            <input type="password" class="form-control rounded-pill border-2 border-dark" id="confirmPassword" name="confirm_password" required>
                        </div>
                        <div id="passwordError" class="alert alert-danger d-none" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <span id="errorMessage"></span>
                        </div>
                        <div id="passwordSuccess" class="alert alert-success d-none" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            Password changed successfully!
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0 px-4 pb-4">
                    <button type="submit" form="changePasswordForm" class="btn btn-outline-primary px-4">Change Password</button>
                </div>
            </div>
        </div>
    </div>
    
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sections = document.querySelectorAll("section, footer");
            const navLinks = document.querySelectorAll(".navbar-nav .nav-link");
            const homeSection = document.querySelector("#home"); // Section này chỉ có ở trang home.hbs

            if (!homeSection) {
                // Nếu không phải trang chủ (ví dụ trang login), xóa active và dừng
                navLinks.forEach(link => link.classList.remove("active"));
                return; 
            }

            window.addEventListener("scroll", () => {
                let current = "";
                sections.forEach((section) => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 150) {
                        current = section.getAttribute("id");
                    }
                });
                navLinks.forEach((link) => {
                    link.classList.remove("active");
                    if (link.getAttribute("href").includes(current)) {
                        link.classList.add("active");
                    }
                });
            });

            // --- Change Password Modal ---
            const changePasswordForm = document.getElementById('changePasswordForm');
            if (changePasswordForm) {
                changePasswordForm.addEventListener('submit', async function(e) {
                    e.preventDefault();

                    const currentPassword = document.getElementById('currentPassword').value;
                    const newPassword = document.getElementById('newPassword').value;
                    const confirmPassword = document.getElementById('confirmPassword').value;
                    
                    const errorDiv = document.getElementById('passwordError');
                    const successDiv = document.getElementById('passwordSuccess');
                    const errorMessage = document.getElementById('errorMessage');
                    
                    // Reset alerts
                    errorDiv.classList.add('d-none');
                    successDiv.classList.add('d-none');
                    
                    // Validation
                    if (newPassword !== confirmPassword) {
                        errorMessage.textContent = 'New password and confirmation do not match.';
                        errorDiv.classList.remove('d-none');
                        return;
                    }
                    
                    if (newPassword.length < 6) {
                        errorMessage.textContent = 'New password must be at least 6 characters long.';
                        errorDiv.classList.remove('d-none');
                        return;
                    }
                    
                    try {
                        const response = await fetch('/change-password', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                currentPassword: currentPassword,
                                newPassword: newPassword
                            })
                        });
                        
                        const result = await response.json();
                        
                        if (response.ok) {
                            successDiv.classList.remove('d-none');
                            changePasswordForm.reset();
                            setTimeout(() => {
                                const modal = bootstrap.Modal.getInstance(document.getElementById('changePasswordModal'));
                                modal.hide();
                                successDiv.classList.add('d-none');
                            }, 2000);
                        } else {
                            errorMessage.textContent = result.message || 'Failed to change password.';
                            errorDiv.classList.remove('d-none');
                        }
                    } catch (error) {
                        errorMessage.textContent = 'An error occurred. Please try again.';
                        errorDiv.classList.remove('d-none');
                    }
                });
            }
        });
    </script>

    {{{_sections.js}}}
</body>
</html>
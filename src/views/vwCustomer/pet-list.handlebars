{{#section 'css'}}
<style>
    body {
        background-color: #f4f7f6;
        font-family: 'Abhaya Libre', serif;
    }

    /* Content Styles */
    .content-section {
        background: white;
        border-radius: 20px;
        border: 2px solid #e9ecef;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        margin-top: 30px;
        margin-bottom: 40px;
        overflow: hidden;
    }

    .content-header {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 20px 30px;
        border-bottom: 2px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .content-title {
        font-family: 'Abhaya Libre', serif;
        font-size: 1.25rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #212529;
    }

    .content-body {
        padding: 30px 40px;
    }

    /* Table Styles */
    .custom-table {
        margin-bottom: 0;
    }

    .custom-table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        color: #212529;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
        padding: 15px 20px;
    }

    .custom-table tbody td {
        padding: 20px;
        vertical-align: middle;
        color: #495057;
        font-weight: 500;
        border-bottom: 1px solid #eee;
    }

    .btn-action {
        width: 35px;
        height: 35px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        transition: all 0.2s;
    }

    .btn-edit {
        background-color: #f8f9fa;
        color: #212529;
        border: 1px solid #dee2e6;
    }

    .btn-edit:hover {
        background-color: #212529;
        color: white;
    }

    .btn-delete {
        background-color: #fff5f5;
        color: #e03131;
        border: 1px solid #ffc9c9;
    }

    .btn-delete:hover {
        background-color: #e03131;
        color: white;
    }


    /* Search Form Styling */
    .search-form .form-select {
        border-right: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .search-form .form-control {
        border-left: none;
        border-radius: 0 25px 25px 0 !important;
    }

    .search-form .input-group-prepend .form-select {
        border-radius: 25px 0 0 25px !important;
    }

    /* Modal Styles */
    .modal-content {
        border-radius: 20px;
        border: 3px solid #2d5bff;
        overflow: hidden;
    }

    .modal-header {
        background: #2d5bff;
        border-bottom: 3px solid #2d5bff;
        padding: 20px 30px;
        border-radius: 0px 0px 0 0;
        text-align: center;
    }

    .modal-header .modal-title {
        width: 100%;
        text-align: center;
    }

    .modal-title {
        font-family: 'Abhaya Libre', serif;
        font-weight: 800;
        text-transform: uppercase;
        color: white;
    }

    .btn-close {
        background: #dc3545;
        border: none;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 1;
        position: relative;
    }

    .btn-close:hover,
    .btn-close:focus {
        background: #dc3545;
        box-shadow: none;
        opacity: 1;
    }

    .btn-close::before {
        content: '✕';
        color: white;
        font-size: 18px;
        font-weight: bold;
        position: absolute;
    }

    /* Success Message Close Button */
    .alert-close-btn {
        background: transparent;
        border: none;
        color: #155724;
        font-size: 16px;
        font-weight: bold;
        padding: 0;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0.7;
        transition: opacity 0.2s;
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
    }

    .alert-close-btn:hover {
        opacity: 1;
        background: transparent;
    }

    .alert.alert-dismissible {
        position: relative;
        padding-right: 50px;
    }

    .custom-input {
        border: 2px solid #dee2e6;
        border-radius: 20px;
        padding: 12px 20px;
        background-color: #f8f9fa;
        transition: all 0.3s;
    }

    .custom-input:focus {
        border-color: #0d6efd;
        background-color: white;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
    }

    .btn-add {
        background-color: #212529;
        color: white;
        border: none;
        border-radius: 20px;
        padding: 10px 30px;
        font-weight: 700;
        text-transform: uppercase;
    }

    .btn-add:hover {
        background-color: #000;
        color: white;
    }

    footer#contact {
        display: none;
    }
</style>
{{/section}}

<div class="container-fluid my-4">
    <a href="javascript:history.back()" class="text-dark text-decoration-none"><i class="bi bi-arrow-left fs-4"></i></a>


    {{!-- Success Messages --}}
    {{#if success}}
    <div class="alert alert-success alert-dismissible fade show rounded-3" role="alert">
        {{#if (eq success 'added')}}
        <i class="bi bi-check-circle me-2"></i> Pet added successfully!
        {{/if}}
        {{#if (eq success 'updated')}}
        <i class="bi bi-check-circle me-2"></i> Pet updated successfully!
        {{/if}}
        {{#if (eq success 'deleted')}}
        <i class="bi bi-check-circle me-2"></i> Pet deleted successfully!
        {{/if}}
        <button type="button" class="alert-close-btn" data-bs-dismiss="alert">×</button>
    </div>
    {{/if}}


    {{!-- Pet List Content --}}
    <div class="content-section">
        <div class="content-header">
            <h5 class="content-title mb-0">Pet List</h5>
            <a href="/pets/add" class="btn btn-outline-success btn-sm fw-bold">
                <i class="bi bi-plus-lg me-1"></i> ADD PET
            </a>
        </div>
        <div class="content-body">
            {{#if pets.length}}
            <div class="table-responsive">
                <table class="table custom-table">
                    <thead>
                        <tr>
                            <th>Pet Name</th>
                            <th>Species</th>
                            <th>Gender</th>
                            <th>Weight</th>
                            <th>Birth Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each pets}}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold text-dark">{{name}}</span>
                                </div>
                            </td>
                            <td><span class="badge bg-light text-dark border">{{species}}</span></td>
                            <td>{{#if sex}}{{sex}}{{else}}-{{/if}}</td>
                            <td>{{#if weight}}{{weight}} kg{{else}}-{{/if}}</td>
                            <td>{{#if day_born}}{{formatDate day_born}}{{else}}-{{/if}}</td>
                            <td class="text-end">
                                <div class="action-buttons justify-content-end">
                                    <a href="/pets/edit?id={{pet_id}}" class="btn btn-action btn-edit me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="javascript:void(0)" class="btn btn-action btn-delete" onclick="confirmDeletePet('{{pet_id}}')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="text-center py-5">
                <i class="bi bi-paw fs-1 text-muted"></i>
                <p class="text-muted mt-3">No pets yet. Add your first pet!</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>

{{!-- Add Pet Modal --}}
{{#if isAddMode}}
<div class="modal fade show" id="addPetModal" tabindex="-1" style="display: block; background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-uppercase">Add New Pet</h5>
                <a href="/pets" class="btn-close"></a>
            </div>
            <div class="modal-body p-4">
                <form method="POST" action="/pets/add">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Pet Name *</label>
                        <input type="text" name="name" class="form-control custom-input" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Species *</label>
                            <select name="species" class="form-select custom-input" required>
                                <option value="">Select species</option>
                                <option value="Dog">Dog</option>
                                <option value="Cat">Cat</option>
                                <option value="Bird">Bird</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Sex</label>
                            <select name="sex" class="form-select custom-input">
                                <option value="">Select</option>
                                <option value="MALE">Male</option>
                                <option value="FEMALE">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Day of Birth</label>
                            <input type="date" name="day_born" class="form-control custom-input">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Weight (kg)</label>
                            <input type="number" name="weight" class="form-control custom-input" step="0.01" min="0">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Notes</label>
                        <textarea name="notes" class="form-control"
                            style="border: 2px solid #000; border-radius: 15px; padding: 12px;" rows="2"
                            placeholder="Any notes about your pet..."></textarea>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-add px-5">ADD PET</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{!-- Edit Pet Modal --}}
{{#if isEditMode}}
<div class="modal fade show" id="editPetModal" tabindex="-1" style="display: block; background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-uppercase">Edit Pet</h5>
                <a href="/pets" class="btn-close"></a>
            </div>
            <div class="modal-body p-4">
                <form method="POST" action="/pets/edit?id={{editPet.pet_id}}">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Pet Name *</label>
                        <input type="text" name="name" class="form-control custom-input" value="{{editPet.name}}"
                            required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Species *</label>
                            <select name="species" class="form-select custom-input" required>
                                <option value="Dog" {{#if (eq editPet.species 'Dog' )}}selected{{/if}}>Dog</option>
                                <option value="Cat" {{#if (eq editPet.species 'Cat' )}}selected{{/if}}>Cat</option>
                                <option value="Bird" {{#if (eq editPet.species 'Bird' )}}selected{{/if}}>Bird</option>
                                <option value="Other" {{#if (eq editPet.species 'Other' )}}selected{{/if}}>Other
                                </option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Sex</label>
                            <select name="sex" class="form-select custom-input">
                                <option value="">Select</option>
                                <option value="MALE" {{#if (eq editPet.sex 'MALE' )}}selected{{/if}}>Male</option>
                                <option value="FEMALE" {{#if (eq editPet.sex 'FEMALE' )}}selected{{/if}}>Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Day of Birth</label>
                            <input type="date" name="day_born" class="form-control custom-input"
                                value="{{formatDateForInput editPet.day_born}}">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Weight (kg)</label>
                            <input type="number" name="weight" class="form-control custom-input"
                                value="{{editPet.weight}}" step="0.01" min="0">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Notes</label>
                        <textarea name="notes" class="form-control"
                            style="border: 2px solid #000; border-radius: 15px; padding: 12px;"
                            rows="2">{{editPet.notes}}</textarea>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-add px-5">UPDATE PET</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

<script>
function confirmDeletePet(petId) {
    Swal.fire({
        title: 'Delete Pet?',
        text: 'Are you sure you want to delete this pet? This action cannot be undone.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, Delete',
        cancelButtonText: 'No, Keep It',
        confirmButtonColor: '#dc3545',
        cancelButtonColor: '#6c757d'
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = '/pets/delete?id=' + petId;
        }
    });
}
</script>
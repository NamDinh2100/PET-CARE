{{#section 'css'}}
<style>
    /* Profile Page Styles - Matching Prototype */
    .profile-header-card {
        background: white;
        border-radius: 50px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        border: 1px solid #ddd;
        position: relative;
        margin-top: 60px;
        padding: 10px 0 20px 0;
    }

    .avatar-circle {
        width: 100px;
        height: 100px;
        background-color: #333;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 50px;
        position: absolute;
        top: -40px;
        left: 60px;
        border: 5px solid white;
        z-index: 10;
    }

    .username-section {
        margin-left: 180px;
        margin-top: 20px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-right: 40px;
    }

    .username-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    .username-handle {
        color: #666;
        font-size: 0.9rem;
    }

    .btn-logout {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .btn-logout:hover {
        background-color: #bb2d3b;
        color: white;
    }

    .nav-tabs {
        border-bottom: 2px solid #000;
        width: 90%;
        margin: 10px auto 0 auto;
    }

    .nav-tabs .nav-link {
        border: none;
        color: #333;
        font-weight: 600;
        text-transform: uppercase;
        margin-right: 20px;
        background: transparent;
        padding-bottom: 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .nav-tabs .nav-link.active {
        color: #2b7de9;
        background: transparent;
        border-bottom: 4px solid #2b7de9 !important;
        margin-bottom: -3px;
    }

    .nav-tabs .nav-link:hover {
        color: #2b7de9;
    }

    .content-card {
        background-color: #d9d9d9;
        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        min-height: 300px;
    }

    .content-title {
        font-family: 'Playfair Display', serif;
        font-weight: bold;
        font-size: 1.5rem;
        text-transform: uppercase;
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    /* Pet Card Styles */
    .pet-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .pet-name {
        font-weight: bold;
        font-size: 1.2rem;
        color: #333;
    }

    .pet-info {
        color: #666;
        font-size: 0.9rem;
    }

    .btn-action {
        border: 2px solid #333;
        color: #333;
        background: white;
        border-radius: 8px;
        padding: 6px 15px;
        font-weight: bold;
        font-size: 0.85rem;
    }

    .btn-action:hover {
        background: #333;
        color: white;
    }

    .btn-action.btn-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

    .btn-action.btn-danger:hover {
        background: #dc3545;
        color: white;
    }

    .btn-add {
        background-color: #2b7de9;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 8px 25px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .btn-add:hover {
        background-color: #1a5fc4;
        color: white;
    }

    .alert-custom {
        border-radius: 15px;
    }

    /* Modal Styles */
    .modal-content {
        border-radius: 20px;
        border: 3px solid #b8b8b8;
    }

    .modal-header {
        background-color: #d9d9d9;
        border-bottom: 3px solid #b8b8b8;
        border-radius: 17px 17px 0 0;
    }

    .custom-input {
        border: 2px solid #000;
        border-radius: 25px;
        padding: 12px 20px;
    }
</style>
{{/section}}

<div class="container my-4">
    <a href="/" class="text-dark fs-4 text-decoration-none"><i class="bi bi-arrow-left"></i> Back to Home</a>

    <div class="profile-header-card">
        <div class="avatar-circle"><i class="bi bi-person-fill"></i></div>
        <div class="username-section">
            <div>
                <div class="username-title">CUSTOMER</div>
                <div class="username-handle">@{{authUser.full_name}}</div>
            </div>
            <form action="/signout" method="post" style="display: inline;">
                <button type="submit" class="btn btn-logout">LOG OUT</button>
            </form>
        </div>

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="/customer/profile">PERSONAL INFORMATION</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/customer/pets">PET LIST</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/customer/appointments">APPOINTMENT HISTORY</a>
            </li>
        </ul>
    </div>

    {{!-- Success Messages --}}
    {{#if success}}
    <div class="alert alert-success alert-custom mt-4" role="alert">
        {{#if (eq success 'added')}}
        <i class="bi bi-check-circle me-2"></i> Pet added successfully!
        {{/if}}
        {{#if (eq success 'updated')}}
        <i class="bi bi-check-circle me-2"></i> Pet updated successfully!
        {{/if}}
        {{#if (eq success 'deleted')}}
        <i class="bi bi-check-circle me-2"></i> Pet deleted successfully!
        {{/if}}
    </div>
    {{/if}}

    {{!-- Pet List Content --}}
    <div class="content-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="content-title mb-0">DATA OF CUSTOMER'S PET</h4>
            <a href="/customer/pets/add" class="btn btn-add">
                <i class="bi bi-plus-lg me-1"></i> ADD
            </a>
        </div>

        {{#if pets.length}}
        <div class="row">
            {{#each pets}}
            <div class="col-md-6 col-lg-4">
                <div class="pet-card">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-paw-fill fs-2 text-primary me-3"></i>
                        <div>
                            <div class="pet-name">{{name}}</div>
                            <div class="pet-info">{{species}}</div>
                        </div>
                    </div>
                    <div class="pet-info mb-3">
                        {{#if sex}}<span class="me-3"><i class="bi bi-gender-ambiguous me-1"></i>{{sex}}</span>{{/if}}
                        {{#if weight}}<span class="me-3"><i class="bi bi-speedometer me-1"></i>{{weight}}
                            kg</span>{{/if}}
                        {{#if day_born}}<span><i class="bi bi-calendar me-1"></i>{{day_born}}</span>{{/if}}
                    </div>
                    {{#if notes}}
                    <div class="pet-info mb-3">
                        <i class="bi bi-chat-left-text me-1"></i> {{notes}}
                    </div>
                    {{/if}}
                    <div class="d-flex gap-2">
                        <a href="/customer/pets/edit?id={{pet_id}}" class="btn btn-action btn-sm">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a href="/customer/pets/delete?id={{pet_id}}" class="btn btn-action btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this pet?')">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="text-center py-5">
            <i class="bi bi-paw fs-1 text-muted"></i>
            <p class="text-muted mt-3">No pets yet. Add your first pet!</p>
        </div>
        {{/if}}
    </div>
</div>

{{!-- Add Pet Modal --}}
{{#if isAddMode}}
<div class="modal fade show" id="addPetModal" tabindex="-1" style="display: block; background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-uppercase">Add New Pet</h5>
                <a href="/customer/pets" class="btn-close"></a>
            </div>
            <div class="modal-body p-4">
                <form method="POST" action="/customer/pets/add">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Pet Name *</label>
                        <input type="text" name="name" class="form-control custom-input" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Species *</label>
                            <select name="species" class="form-select custom-input" required>
                                <option value="">Select species</option>
                                <option value="Dog">Dog</option>
                                <option value="Cat">Cat</option>
                                <option value="Bird">Bird</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Sex</label>
                            <select name="sex" class="form-select custom-input">
                                <option value="">Select</option>
                                <option value="MALE">Male</option>
                                <option value="FEMALE">Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Day of Birth</label>
                            <input type="date" name="day_born" class="form-control custom-input">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Weight (kg)</label>
                            <input type="number" name="weight" class="form-control custom-input" step="0.01" min="0">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Notes</label>
                        <textarea name="notes" class="form-control"
                            style="border: 2px solid #000; border-radius: 15px; padding: 12px;" rows="2"
                            placeholder="Any notes about your pet..."></textarea>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-add px-5">ADD PET</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{!-- Edit Pet Modal --}}
{{#if isEditMode}}
<div class="modal fade show" id="editPetModal" tabindex="-1" style="display: block; background: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold text-uppercase">Edit Pet</h5>
                <a href="/customer/pets" class="btn-close"></a>
            </div>
            <div class="modal-body p-4">
                <form method="POST" action="/customer/pets/edit?id={{editPet.pet_id}}">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Pet Name *</label>
                        <input type="text" name="name" class="form-control custom-input" value="{{editPet.name}}"
                            required>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Species *</label>
                            <select name="species" class="form-select custom-input" required>
                                <option value="Dog" {{#if (eq editPet.species 'Dog' )}}selected{{/if}}>Dog</option>
                                <option value="Cat" {{#if (eq editPet.species 'Cat' )}}selected{{/if}}>Cat</option>
                                <option value="Bird" {{#if (eq editPet.species 'Bird' )}}selected{{/if}}>Bird</option>
                                <option value="Other" {{#if (eq editPet.species 'Other' )}}selected{{/if}}>Other
                                </option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Sex</label>
                            <select name="sex" class="form-select custom-input">
                                <option value="">Select</option>
                                <option value="MALE" {{#if (eq editPet.sex 'MALE' )}}selected{{/if}}>Male</option>
                                <option value="FEMALE" {{#if (eq editPet.sex 'FEMALE' )}}selected{{/if}}>Female</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Day of Birth</label>
                            <input type="date" name="day_born" class="form-control custom-input"
                                value="{{editPet.day_born}}">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Weight (kg)</label>
                            <input type="number" name="weight" class="form-control custom-input"
                                value="{{editPet.weight}}" step="0.01" min="0">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Notes</label>
                        <textarea name="notes" class="form-control"
                            style="border: 2px solid #000; border-radius: 15px; padding: 12px;"
                            rows="2">{{editPet.notes}}</textarea>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-add px-5">UPDATE PET</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{#section 'css'}}
<style>
    /* Profile Page Styles - Matching Prototype */
    .profile-header-card {
        background: white;
        border-radius: 50px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        border: 1px solid #ddd;
        position: relative;
        margin-top: 60px;
        padding: 10px 0 20px 0;
    }

    .avatar-circle {
        width: 100px;
        height: 100px;
        background-color: #28a745; /* Green background for customer */
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 50px;
        font-weight: bold;
        position: absolute;
        top: -40px;
        left: 60px;
        border: 5px solid white;
        z-index: 10;
    }

    .username-section {
        margin-left: 180px;
        margin-top: 20px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-right: 40px;
    }

    .username-title {
        font-family: 'Abhaya Libre', serif;
        font-size: 1.4rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    .username-handle {
        color: #666;
        font-size: 0.9rem;
    }

    .btn-logout {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .btn-logout:hover {
        background-color: #bb2d3b;
        color: white;
    }

    .nav-tabs {
        border-bottom: 2px solid #000;
        width: 90%;
        margin: 10px auto 0 auto;
    }

    .nav-tabs .nav-link {
        border: none;
        color: #333;
        font-weight: 600;
        text-transform: uppercase;
        margin-right: 20px;
        background: transparent;
        padding-bottom: 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .nav-tabs .nav-link.active {
        color: #2b7de9;
        background: transparent;
        border-bottom: 4px solid #2b7de9 !important;
        margin-bottom: -3px;
    }

    .nav-tabs .nav-link:hover {
        color: #2b7de9;
    }

    .content-card {
        background-color: #fcfcfc;
        border: 3px solid #b8b8b8;
        border-radius: 20px;
        padding: 0;
        overflow: hidden;
        margin-top: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .content-header {
        background-color: #d9d9d9;
        padding: 15px 20px;
        border-bottom: 3px solid #b8b8b8;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .content-header-title {
        font-family: 'Abhaya Libre', serif;
        font-weight: bold;
        font-size: 1.3rem;
        text-transform: uppercase;
    }

    .content-body {
        padding: 30px;
    }

    .form-label-page {
        font-weight: bold;
        font-size: 0.85rem;
        text-transform: uppercase;
        margin-bottom: 8px;
        display: block;
        color: #333;
    }

    .custom-input-page {
        border: 2px solid #000;
        border-radius: 25px;
        padding: 12px 20px;
        background-color: #fff;
        width: 100%;
        margin-bottom: 20px;
        font-weight: 500;
    }

    .custom-input-page:focus {
        border-color: #2d5bff;
        box-shadow: 0 0 0 0.2rem rgba(45, 91, 255, 0.25);
    }

    .custom-input-page:disabled {
        background-color: #f5f5f5;
        cursor: not-allowed;
    }

    .btn-action {
        border: 2px solid #333;
        color: #333;
        background: white;
        border-radius: 10px;
        padding: 8px 20px;
        font-weight: bold;
        font-size: 0.9rem;
        text-transform: uppercase;
        transition: all 0.3s;
    }

    .btn-action:hover {
        background-color: #333;
        color: white;
    }

    .btn-action.btn-edit {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

    .btn-action.btn-edit:hover {
        background-color: #bb2d3b;
    }

    .alert-custom {
        border-radius: 15px;
    }
</style>
{{/section}}

<div class="container my-4">
    <a href="/" class="text-dark fs-4 text-decoration-none"><i class="bi bi-arrow-left"></i></a>

    <div class="profile-header-card">
        <div class="avatar-circle">{{getInitial authUser.full_name}}</div>
        <div class="username-section">
            <div>
                <div class="username-title">CUSTOMER</div>
                <div class="username-handle">{{authUser.full_name}}</div>
            </div>
            <form id="frmLogout" action="/signout" method="post" style="display: inline;">
                <button type="submit" class="btn btn-outline-danger">LOG OUT</button>
            </form>
        </div>

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="/profile">PERSONAL INFORMATION</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/pets">PET LIST</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/appointments">APPOINTMENT HISTORY</a>
            </li>
        </ul>
    </div>

    {{!-- Success/Error Messages --}}
    {{#if success}}
    <div class="alert alert-success alert-custom mt-4" role="alert">
        {{#if (eq success 'updated')}}
        <i class="bi bi-check-circle me-2"></i> Profile updated successfully!
        {{/if}}
        {{#if (eq success 'password_changed')}}
        <i class="bi bi-check-circle me-2"></i> Password changed successfully!
        {{/if}}
    </div>
    {{/if}}

    {{#if error}}
    <div class="alert alert-danger alert-custom mt-4" role="alert">
        {{#if (eq error 'wrong_password')}}
        <i class="bi bi-exclamation-circle me-2"></i> Current password is incorrect!
        {{/if}}
        {{#if (eq error 'password_mismatch')}}
        <i class="bi bi-exclamation-circle me-2"></i> New passwords do not match!
        {{/if}}
    </div>
    {{/if}}

    {{!-- Profile Form --}}
    <div class="content-card">
        <div class="content-header">
            <span class="content-header-title">Personal Information</span>
            <div>
                <button type="button" class="btn btn-action me-2" data-bs-toggle="modal"
                    data-bs-target="#changePasswordModal">
                    CHANGE PASSWORD
                </button>
                <button type="submit" form="profileForm" class="btn btn-action btn-edit">
                    EDIT
                </button>
            </div>
        </div>
        <div class="content-body">
            <form id="profileForm" method="POST" action="/profile/update">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label-page">Full Name</label>
                        <input type="text" name="full_name" class="form-control custom-input-page"
                            value="{{user.full_name}}" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label-page">Email</label>
                        <input type="email" class="form-control custom-input-page" value="{{user.email}}" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label-page">Phone</label>
                        <input type="tel" name="phone" class="form-control custom-input-page" value="{{user.phone}}"
                            placeholder="Enter phone number">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{!-- Change Password Modal --}}
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border-radius: 20px; border: 3px solid #b8b8b8;">
            <div class="modal-header" style="background-color: #d9d9d9; border-bottom: 3px solid #b8b8b8;">
                <h5 class="modal-title fw-bold text-uppercase">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form method="POST" action="/profile/password">
                    <div class="mb-3">
                        <label class="form-label-page">Current Password</label>
                        <input type="password" name="current_password" class="form-control custom-input-page" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label-page">New Password</label>
                        <input type="password" name="new_password" class="form-control custom-input-page" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label-page">Confirm New Password</label>
                        <input type="password" name="confirm_password" class="form-control custom-input-page" required>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-action btn-edit px-5">
                            CHANGE PASSWORD
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
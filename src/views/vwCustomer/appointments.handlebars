{{#section 'css'}}
<style>
    /* 1. Profile & Layout Styles */
    .profile-header-card {
        background: white;
        border-radius: 50px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        border: 1px solid #ddd;
        position: relative;
        margin-top: 60px;
        padding: 10px 0 20px 0;
    }

    .avatar-circle {
        width: 100px;
        height: 100px;
        background-color: #28a745;
        border-radius: 50%;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 50px;
        font-weight: bold;
        position: absolute;
        top: -40px;
        left: 60px;
        border: 5px solid white;
        z-index: 10;
    }

    .username-section {
        margin-left: 180px;
        margin-top: 20px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-right: 40px;
    }

    .username-title {
        font-family: 'Abhaya Libre', serif;
        font-size: 1.4rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    .username-handle {
        color: #666;
        font-size: 0.9rem;
    }

    .btn-logout {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: bold;
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    .nav-tabs {
        border-bottom: 2px solid #000;
        width: 90%;
        margin: 10px auto 0 auto;
    }

    .nav-tabs .nav-link {
        border: none;
        color: #333;
        font-weight: 600;
        text-transform: uppercase;
        margin-right: 20px;
        background: transparent;
        padding-bottom: 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 0.9rem;
    }

    .nav-tabs .nav-link.active {
        color: #2b7de9;
        border-bottom: 4px solid #2b7de9 !important;
        margin-bottom: -3px;
    }

    .content-card {
        background-color: #d9d9d9;
        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        min-height: 300px;
    }

    .content-title {
        font-family: 'Abhaya Libre', serif;
        font-weight: bold;
        font-size: 1.5rem;
        text-transform: uppercase;
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    /* 2. Appointment Card Styles */
    .appointment-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .appointment-date { font-weight: bold; font-size: 1.1rem; color: #2b7de9; }
    .status-badge { padding: 5px 15px; border-radius: 20px; font-size: 0.8rem; font-weight: bold; text-transform: uppercase; }
    .status-confirmed { background-color: #28a745; color: white; }
    .status-completed { background-color: #0088ff; color: white; }
    .status-cancelled { background-color: #dc3545; color: white; }
    .status-scheduled { background-color: #ffd900; color: #000; }

    /* 3. Filter & Button Styles */
    .filter-btn { border: 2px solid #333; color: #333; background: white; border-radius: 20px; padding: 8px 20px; font-weight: 600; margin-right: 10px; text-decoration: none; }
    .filter-btn.active, .filter-btn:hover { background: #333; color: white; }

    /* 4. MODERN INVOICE MODAL STYLES */
    .modal-content-custom { border-radius: 20px; border: none; overflow: hidden; box-shadow: 0 15px 35px rgba(0,0,0,0.2); }
    .modal-header-custom { background-color: #f8f9fa; border-bottom: 2px solid #eee; padding: 20px; }
    .modal-title-custom { font-family: 'Abhaya Libre', serif; font-weight: 800; color: #333; letter-spacing: 1px; }
    
    .btn-close-custom { 
        background: white; border: 2px solid #dc3545; color: #dc3545; 
        width: 32px; height: 32px; border-radius: 50%; 
        display: flex; align-items: center; justify-content: center; 
        font-weight: bold; transition: 0.2s; cursor: pointer;
    }
    .btn-close-custom:hover { background: #dc3545; color: white; }

    .invoice-brand { color: #2b7de9; font-weight: 800; font-size: 1.6rem; margin-bottom: 0; }
    .invoice-details-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin: 20px 0; padding: 20px; background: #fafafa; border-radius: 15px; }
    .info-label { font-size: 0.7rem; color: #888; text-transform: uppercase; font-weight: 700; }
    .info-value { font-size: 0.95rem; color: #333; font-weight: 600; }

    .invoice-table { width: 100%; border-collapse: separate; border-spacing: 0; margin: 20px 0; }
    .invoice-table th { background: #f8f9fa; padding: 12px; font-size: 0.75rem; color: #666; text-transform: uppercase; border-bottom: 2px solid #eee; }
    .invoice-table td { padding: 12px; font-size: 0.9rem; border-bottom: 1px solid #f1f1f1; }

    .invoice-summary-box { background: #f8f9fa; border-radius: 15px; padding: 20px; margin-top: 20px; }
    .summary-row { display: flex; justify-content: space-between; margin-bottom: 8px; }
    .summary-total { border-top: 2px solid #2b7de9; margin-top: 10px; padding-top: 10px; color: #2b7de9; font-weight: 800; font-size: 1.2rem; }

    @media print {
        body * { visibility: hidden; }
        #invoiceModal .modal-content, #invoiceModal .modal-content * { visibility: visible; }
        #invoiceModal .modal-content { position: absolute; left: 0; top: 0; width: 100%; }
        .btn-close-custom, .btn-print { display: none !important; }
    }

    /* 5. RECORD STYLES */
    .record-form-label { 
        font-weight: bold; 
        text-transform: uppercase; 
        font-size: 0.75rem; 
        color: #333;
        min-width: 120px;
    }
    .record-input-pill {
        flex: 1;
        border: 1px solid #333;
        border-radius: 20px;
        padding: 8px 15px;
        background: white;
        font-size: 0.9rem;
    }
    .label-red { color: #dc3545; }
    .record-input-red {
        border: 2px solid #dc3545;
        border-radius: 15px;
        padding: 10px 15px;
        background: white;
        font-size: 0.9rem;
    }
    .medicine-section-title {
        font-weight: bold;
        text-transform: uppercase;
        font-size: 1rem;
        color: #333;
        margin: 20px 0 10px 0;
    }
    .record-table-container {
        border: 2px solid #333;
        border-radius: 15px;
        padding: 0;
        margin-bottom: 20px;
        overflow: hidden;
    }
    .record-table {
        width: 100%;
        border-collapse: collapse;
    }
    .record-table th {
        background: #f8f9fa;
        padding: 10px;
        font-size: 0.75rem;
        color: #666;
        text-transform: uppercase;
        border-bottom: 1px solid #ddd;
    }
    .record-table td {
        padding: 10px;
        font-size: 0.9rem;
        border-bottom: 1px solid #f1f1f1;
    }
</style>
{{/section}}

<div class="container my-4">
    <a href="/" class="text-dark fs-4 text-decoration-none"><i class="bi bi-arrow-left"></i></a>

    <div class="profile-header-card">
        <div class="avatar-circle">{{getInitial authUser.full_name}}</div>
        <div class="username-section">
            <div>
                <div class="username-title">CUSTOMER</div>
                <div class="username-handle">{{authUser.full_name}}</div>
            </div>
            <form action="/signout" method="post" style="display: inline;">
                <button type="submit" class="btn btn-logout">LOG OUT</button>
            </form>
        </div>

        <ul class="nav nav-tabs">
            <li class="nav-item"><a class="nav-link" href="/profile">PERSONAL INFORMATION</a></li>
            <li class="nav-item"><a class="nav-link" href="/pets">PET LIST</a></li>
            <li class="nav-item"><a class="nav-link active" href="/appointments">APPOINTMENT HISTORY</a></li>
        </ul>
    </div>

    {{#if success}}
    <div class="alert alert-success alert-custom mt-4">
        <i class="bi bi-check-circle me-2"></i> Action processed successfully!
    </div>
    {{/if}}

    <div class="content-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="content-title mb-0">APPOINTMENT HISTORY</h4>
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#bookingModal">
                <i class="bi bi-plus-lg me-1"></i> ADD
            </button>
        </div>

        <div class="mb-4 text-center">
            <a href="/appointments" class="filter-btn {{#unless currentFilter}}active{{/unless}}">All</a>
            <a href="/appointments?filter=upcoming" class="filter-btn {{#if (eq currentFilter 'upcoming')}}active{{/if}}">Upcoming</a>
            <a href="/appointments?filter=past" class="filter-btn {{#if (eq currentFilter 'past')}}active{{/if}}">Past</a>
        </div>

        {{#if appointments.length}}
        <div class="row g-4">
            {{#each appointments}}
            <div class="col-md-6">
                <div class="appointment-card h-100">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <div class="appointment-date"><i class="bi bi-calendar-event me-2"></i>{{date_start}}</div>
                            <div class="appointment-info mt-1"><i class="bi bi-clock me-1"></i>{{time}}</div>
                        </div>
                        <span class="status-badge status-{{status}}">{{status}}</span>
                    </div>
                    <div class="appointment-info mb-2"><i class="bi bi-paw me-2"></i><strong>Pet:</strong> {{pet_name}}</div>
                    <div class="appointment-info mb-3"><i class="bi bi-briefcase me-2"></i><strong>Service:</strong> {{#if services}}{{services}}{{else}}N/A{{/if}}</div>
                    
                    <div class="text-end">
                        {{#if (eq status 'scheduled')}}
                        <form method="POST" action="/appointments/cancel" class="d-inline">
                            <input type="hidden" name="appointment_id" value="{{appointment_id}}">
                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Cancel?')">Cancel</button>
                        </form>
                        {{/if}}
                        {{#if (eq status 'completed')}}
                        <button class="btn btn-outline-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#invoiceModal" data-appointment-id="{{appointment_id}}">
                            <i class="bi bi-receipt me-1"></i> Invoice
                        </button>
                        <button class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#recordModal" data-appointment-id="{{appointment_id}}">
                            <i class="bi bi-file-medical me-1"></i> Record
                        </button>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="text-center py-5">
            <i class="bi bi-calendar-x fs-1 text-muted"></i>
            <p class="text-muted mt-3">No appointments found.</p>
        </div>
        {{/if}}
    </div>
</div>

<div class="modal fade" id="invoiceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 650px;">
        <div class="modal-content modal-content-custom">
            <div class="modal-header modal-header-custom d-flex justify-content-between align-items-center">
                <h5 class="modal-title-custom mb-0">ELECTRONIC INVOICE</h5>
                <div class="d-flex gap-2">
                    <button type="button" class="btn-close-custom" data-bs-dismiss="modal">✕</button>
                </div>
            </div>
            <div class="modal-body p-4" id="invoiceContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 text-muted fw-bold">LOADING INVOICE...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="recordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 600px;">
        <div class="modal-content modal-content-custom shadow-lg">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title-custom">RECORD</h5>
                <button type="button" class="btn-close-custom" data-bs-dismiss="modal">✕</button>
            </div>
            <div class="modal-body p-4" id="recordContent">
                <div class="text-center"><div class="spinner-border text-success"></div></div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="bookingModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-content-custom" style="max-width: 500px; margin: auto;">
            <div class="modal-header modal-header-custom justify-content-center">
                <h5 class="modal-title-custom m-0">BOOKING FORM</h5>
                <button type="button" class="btn-close-custom position-absolute" style="right: 15px;" data-bs-dismiss="modal">✕</button>
            </div>
            <div class="modal-body p-4">
                <form id="bookingForm" method="POST" action="/appointments/book">
                    <div class="mb-3">
                        <select class="form-select rounded-pill px-3" name="pet_id" required>
                            <option selected disabled>SELECT YOUR PET</option>
                            {{#each pets}}
                            <option value="{{this.pet_id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6"><input type="date" class="form-control rounded-pill" name="date_start" required></div>
                        <div class="col-6"><input type="time" class="form-control rounded-pill" name="time" required></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold text-uppercase text-muted" style="font-size: 0.9rem;">Select
                            Services:</label>
                        {{#if serviceList}}
                        <div
                            style="border: 2px solid #000; border-radius: 20px; padding: 20px 40px; background-color: #fff; max-height: 150px; overflow-y: auto;">
                            {{#each serviceList}}
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="services"
                                    value="{{this.service_id}}" id="service_{{this.service_id}}">
                                <label class="form-check-label fw-bold" for="service_{{this.service_id}}">
                                    {{this.service_name}}
                                </label>
                            </div>
                            {{/each}}
                        </div>
                        {{else}}
                        <div class="alert alert-warning">No services available.</div>
                        {{/if}}
                    </div>
                    <textarea class="form-control mb-4" name="note" placeholder="Note something..." rows="3" style="border-radius: 15px;"></textarea>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold">SUBMIT</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


{{#section 'js'}}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const invoiceModal = document.getElementById('invoiceModal');
    if (invoiceModal) {
        invoiceModal.addEventListener('show.bs.modal', async function(event) {
            const button = event.relatedTarget;
            const appointmentId = button.getAttribute('data-appointment-id');
            const contentDiv = document.getElementById('invoiceContent');
            
            try {
                const response = await fetch('/appointments/' + appointmentId + '/invoice');
                const data = await response.json();
                
                if (data.success) {
                    const { appointment, services, summary, payment } = data;
                    
                    let servicesRows = services.map(s => `
                        <tr>
                            <td><strong>${s.service_name}</strong><br><small class="text-muted">Professional Pet Service</small></td>
                            <td class="text-center">1</td>
                            <td class="text-end">${parseFloat(s.price).toLocaleString('vi-VN')} đ</td>
                            <td class="text-end fw-bold">${parseFloat(s.price).toLocaleString('vi-VN')} đ</td>
                        </tr>
                    `).join('');

                    contentDiv.innerHTML = `
                        <div class="d-flex justify-content-between align-items-start mb-4">
                            <div>
                                <h4 class="invoice-brand">PETCARE X</h4>
                                <p class="text-muted small">Quality health for your pets</p>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-light text-dark border p-2">#INV-${appointmentId.toString().padStart(4, '0')}</span>
                                <p class="small text-muted mt-1">Date: ${new Date().toLocaleDateString('vi-VN')}</p>
                            </div>
                        </div>

                        <div class="invoice-details-grid">
                            <div>
                                <div class="info-label">Customer</div>
                                <div class="info-value">${appointment.customer_name}</div>
                                <div class="info-label mt-2">Pet Name</div>
                                <div class="info-value"><i class="bi bi-paw-fill me-1"></i> ${appointment.pet_name}</div>
                            </div>
                            <div>
                                <div class="info-label">Appointment Time</div>
                                <div class="info-value">${new Date(appointment.date_start).toLocaleDateString('vi-VN')} | ${appointment.time}</div>
                                <div class="info-label mt-2">Veterinarian</div>
                                <div class="info-value">${appointment.veterinarian_name || 'Not Assigned'}</div>
                            </div>
                        </div>

                        <table class="invoice-table">
                            <thead>
                                <tr>
                                    <th>Service</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>${servicesRows}</tbody>
                        </table>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="p-3 border rounded-3 bg-light">
                                    <div class="info-label">Payment Detail</div>
                                    <div class="small mt-1 d-flex justify-content-between">
                                        <span>Method:</span> <span class="fw-bold">${payment.method}</span>
                                    </div>
                                    <div class="small d-flex justify-content-between">
                                        <span>Status:</span> <span class="badge ${payment.status === 'paid' ? 'bg-success' : 'bg-warning text-dark'} text-uppercase">${payment.status}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="summary-row"><span>Subtotal:</span> <span>${summary.subtotal.toLocaleString('vi-VN')} đ</span></div>
                                <div class="summary-row text-danger"><span>Discount:</span> <span>- ${summary.discount.toLocaleString('vi-VN')}%</span></div>
                                <div class="summary-total d-flex justify-content-between">
                                    <span>TOTAL:</span> <span>${summary.total.toLocaleString('vi-VN')} đ</span>
                                </div>
                            </div>
                        </div>

                        ${payment.status === 'unpaid' ? `
                        <form class="mt-4" method="post" action="/appointments/invoice/pay/${payment.id}">
                            <div class="row align-items-end">
                                <div class="col-md-8">
                                    <label class="form-label fw-bold text-uppercase text-muted" style="font-size: 0.85rem;">
                                        <i class="bi bi-credit-card me-1"></i> Payment Method
                                    </label>
                                    <select class="form-select rounded-pill" name="payment_method" required>
                                        <option value="" disabled selected>Select payment method</option>
                                        <option value="CASH">Cash</option>
                                        <option value="CREDIT_CARD">Credit Card</option>
                                        <option value="DEBIT_CARD">Debit Card</option>
                                        <option value="BANK_TRANSFER">Bank Transfer</option>
                                        <option value="E_WALLET">E-Wallet</option>
                                    </select>
                                </div>
                                <div class="col-md-4 text-end">
                                    <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold w-100">
                                        <i class="bi bi-check-circle me-1"></i> PAY NOW
                                    </button>
                                </div>
                            </div>
                        </form>
                        ` : ''}
                        
                        <p class="text-center text-muted small mt-5">Thank you for trusting our clinic!</p>
                    `;
                } else {
                    contentDiv.innerHTML = '<div class="alert alert-danger">Error loading data.</div>';
                }
            } catch (e) {
                contentDiv.innerHTML = '<div class="alert alert-danger">Connection error.</div>';
            }
        });
    }
    const recordModal = document.getElementById('recordModal');
    if (recordModal) {
        recordModal.addEventListener('show.bs.modal', async function(event) {
            const appointmentId = event.relatedTarget.getAttribute('data-appointment-id');
            const content = document.getElementById('recordContent');
            
            try {
                const res = await fetch(`/appointments/${appointmentId}/record`); // Giả sử route này trả về data record
                const data = await res.json();
                
                if (data.success) {
                    const { medicines, medicine_records } = data;
                    let medicineRows = medicines.map((m, index) => `
                        <tr>
                            <td>${index + 1}</td>
                            <td>${m.medicine_name}</td>
                            <td>${m.form}</td>
                            <td>${m.description}</td>
                        </tr>
                    `).join('');

                    content.innerHTML = `
                        <div class="mb-3 d-flex align-items-center">
                            <label class="record-form-label">DATE :</label>
                            <div class="record-input-pill">${new Date(medicine_records.visit_date).toLocaleDateString('vi-VN')}</div>
                        </div>
                        <div class="mb-3 d-flex align-items-center">
                            <label class="record-form-label">TREATMENT :</label>
                            <div class="record-input-pill">${medicine_records.treatment || ''}</div>
                        </div>
                        <div class="mb-3 d-flex align-items-center">
                            <label class="record-form-label">SYMPTOM :</label>
                            <div class="record-input-pill">${medicine_records.symptoms || ''}</div>
                        </div>

                        <h5 class="medicine-section-title">MEDICINE</h5>
                        <div class="record-table-container">
                            <table class="record-table">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;">No.</th>
                                        <th>Name</th>
                                        <th>Form</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    ${medicineRows || '<tr><td colspan="4">No medicine prescribed.</td></tr>'}
                                </tbody>
                            </table>
                        </div>

                        <div class="mb-3">
                            <label class="record-form-label label-red">DIAGNOSIS :</label>
                            <div class="record-input-red">${medicine_records.diagnosis || ''}</div>
                        </div>
                        <div class="mb-3">
                            <label class="record-form-label label-red">INSTRUCTION :</label>
                            <div class="record-input-red" style="min-height: 80px;">${medicine_records.instruction || ''}</div>
                        </div>
                    `;
                }
            } catch (e) {
                content.innerHTML = `<div class="alert alert-danger">Error loading record data.</div>`;
            }
        });
    }
});
</script>
{{/section}}